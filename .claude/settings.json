{
  "permissions": {
    "defaultMode": "default",
    "deny": [
      "Bash(rm:*)",
      "Bash(rmdir:*)",
      "Bash(sudo:*)",
      "Bash(dd:*)",
      "Bash(mkfs:*)"
    ],
    "allow": [
      "Read",
      "Grep",
      "Glob",
      "WebSearch",
      "WebFetch",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(python:*)",
      "Bash(source:*)",
      "Bash(echo:*)",
      "Bash(cat:*)",
      "Write(reviews/**)",
      "Edit(reviews/**)",
      "Skill(literature-review)",
      "Skill(philosophy-research)"
    ],
    "ask": [
      "Write(*)",
      "Edit(*)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/setup-environment.sh"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/subagent_stop_bib.sh"
          }
        ]
      }
    ]
  }
}