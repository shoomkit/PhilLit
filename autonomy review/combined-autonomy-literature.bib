  year = {2020},
  volume = {35},
  number = {2},
  pages = {162--177},
  doi = {10.1111/ntwe.12160},
  note = {CORE ARGUMENT: Analyzes how on-demand firms secure market power by cultivating calculative asymmetries between platforms and labor. Dynamic/surge pricing exemplifies calculative technique that appears as neutral market mechanism but enables platform manipulation of worker decision-making. Platforms develop covert strategies to influence workers through dynamic pricing and wages, providing insights into exploitative calculus. Calculative asymmetries undermine worker autonomy by making informed decision-making impossible. Earlier 2018 report expanded into 2020 journal article. RELEVANCE: Important analysis of how platform calculation and pricing mechanisms function as control tools. Calculative asymmetries concept captures epistemic power imbalances - platforms know and calculate what workers cannot. Dynamic pricing reveals how apparently neutral economic mechanisms can be manipulative when information is asymmetric. Essential for understanding platform control as operating through economic calculation not just direct commands. Shows autonomy requires epistemic parity, not just formal choice. POSITION: Critical technology studies (political economy, platform calculation, on-demand economy).},
  keywords = {dynamic-pricing, calculative-asymmetries, on-demand-economy, platform-power, information-asymmetry, Medium}
}

@book{ravenelle2019hustle,
