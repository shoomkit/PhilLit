@book{nine2022sharing,
  author = {Nine, Cara},
  title = {Sharing Territories: Overlapping Self-Determination and Resource Rights},
  publisher = {Oxford University Press},
  address = {Oxford},
  year = {2022},
  doi = {10.1093/oso/9780198833628.001.0001},
  note = {CORE ARGUMENT: Defends "river model" of territorial rights based on interdependence and overlapping claims rather than exclusive sovereignty. Groups are spatially interconnected through shared resources (rivers, urban areas), requiring collective management through nested and overlapping jurisdictions. Develops "functional autonomy" concept - self-determination measured by performance of specific political functions rather than exclusive territorial control. Foundational territories established around geographical interdependence may overlap existing state boundaries. Temporal dimension: territories emerge through ongoing resource management relationships over time, not just historical title. RELEVANCE: Innovative framework for urban housing. Neighborhoods are paradigmatic overlapping territories - multiple groups (longtime residents, recent arrivals, commuters, landlords, city-wide community) have legitimate but overlapping claims based on different relationships to place. Exclusive territorial control by any single group is neither feasible nor just. Temporal claims vary: longtime residents have deep occupancy claims, newcomers have housing needs and emerging attachment, city has jurisdiction, landlords have property interests. Nine's functional autonomy suggests each group should have self-determination for specific functions rather than total control. Housing project could develop "overlapping housing rights" framework: different stakeholders with different temporal depths of claim exercising different types of authority (residency decisions, community character, development planning, resource allocation). Challenges winner-take-all displacement logic. POSITION: Territorial rights should be overlapping and nested rather than exclusive, based on functional interdependence over time.},
  keywords = {territorial-rights, overlapping-claims, functional-autonomy, shared-governance, Medium}
}

@article{lippertrasmussen2025intergenerational,
  author = {Lippert-Rasmussen, Kasper},
  title = {How should relational egalitarians think of social relations? Intergenerational Justice and the Argument from Temporal Non-Overlap},
  journal = {Critical Review of International Social and Political Philosophy},
  year = {2025},
  volume = {28},
  number = {3},
  pages = {382--401},
  doi = {10.1080/13698230.2025.2462359},
  note = {CORE ARGUMENT: Examines whether relational egalitarianism can handle intergenerational justice given temporal non-overlap. Argument from Temporal Non-Overlap: if social relations are crucial for justice (relational egalitarianism), but we don't socially relate to non-overlapping future generations, then relational egalitarianism provides incomplete justice theory. Defends relational egalitarianism by arguing temporal non-overlap doesn't preclude relevant relationships. However, acknowledges tension: standard relational accounts emphasize reciprocal relationships, but future people can't reciprocate. Examines scope and time-frame of egalitarian justice. RELEVANCE: Displacement involves temporal non-overlap. Former residents no longer present in neighborhood don't overlap with current/future residents. Can relational justice framework handle their claims? If justice requires actual relationships, do displaced people lose claims once they leave? Or do past relationships create enduring obligations? Housing project faces this puzzle: gentrification disrupts actual relationships (people scatter), but claims seem to persist. Lippert-Rasmussen's analysis suggests need for justice theory that handles both: relational dimensions (actual communities) and non-relational dimensions (obligations to non-overlapping past/future residents). Temporal framing matters: should we assess housing justice at moment-in-time (who's currently here?) or across time (who was here, who will be here?). POSITION: Temporal non-overlap creates theoretical challenge for relational egalitarianism requiring modification to handle intergenerational justice.},
  keywords = {intergenerational-justice, relational-egalitarianism, temporal-non-overlap, Low}
}

@article{cockburn2025rhythm,
  author = {Cockburn, Patrick J. L.},
  title = {The Rhythm of Justice: On Temporal Indeterminacy in Normative Reasoning},
  journal = {Res Publica},
  year = {2025},
  volume = {31},
  pages = {1--20},
  doi = {10.1007/s11158-025-09741-y},
  note = {CORE ARGUMENT: Examines temporal indeterminacy in normative reasoning - the way time itself affects what justice requires. Justice principles don't simply apply timelessly; their content and demands shift based on temporal framing and rhythm. Normative reasoning operates at different temporal scales (moment-to-moment, life-course, intergenerational) producing different assessments. "Rhythm" metaphor captures how justice claims pulse and vary with temporal perspective. Addresses how to integrate synchronic (snapshot) and diachronic (across-time) evaluation. Temporal indeterminacy means same situation can yield different justice assessments depending on time-frame adopted. RELEVANCE: Housing justice exhibits profound temporal indeterminacy. Assess at single moment: newcomers need housing now. Assess across life-course: longtime residents have decades of investment. Assess intergenerationally: displaced communities lost generational wealth accumulation. Different time-frames support different claims. The housing project must address this temporal indeterminacy - not just which claims win but what temporal frame(s) are appropriate for assessment. Cockburn's "rhythm" metaphor helps understand how displacement disrupts temporal patterns of community life. Short-term fluctuations (new residents moving in) differ from long-term trends (systematic demographic replacement). Policy must navigate multiple temporal scales simultaneously. Critical methodological insight for integrating synchronic housing needs with diachronic occupancy claims. POSITION: Justice reasoning involves temporal indeterminacy - different time-frames produce different normative assessments requiring integration.},
  keywords = {temporal-indeterminacy, normative-reasoning, diachronic-justice, temporal-framing, Low}
}

@article{risse2012global,
  author = {Risse, Mathias},
  title = {On Global Justice},
  journal = {Ethics \& International Affairs},
  year = {2012},
  volume = {26},
  number = {4},
  pages = {959--962},
  note = {CORE ARGUMENT: Develops "pluralist internationalism" theory of global justice emphasizing humanity's collective ownership of earth. All humans in present generation AND across generations have symmetrical claims to earth's resources and spaces. Common ownership holds each person has equal opportunity to satisfy basic needs from collectively owned resources. These resources "exist independently of human contributions" - we didn't create them. Provides insights into obligations to future generations and climate change. Non-relational grounds of justice based on shared ownership of planet across time. RELEVANCE: Urban land is quintessential collectively owned resource. Location value (most housing value) is socially created and inherited across generations, not individual contribution. Risse's framework suggests current residents don't have absolute claims to exclude newcomers from urban land - it's collective inheritance. However, occupancy creates legitimate claims to specific parcels. Tension: collective ownership supports newcomer access (they co-own earth), but temporal occupancy supports incumbent protection. Intergenerational dimension: current generation doesn't simply inherit cities from past but holds them in trust for future. Housing project must balance: (1) collective ownership (no one created urban land), (2) occupancy rights (temporal residence creates claims), (3) intergenerational trust (obligations to future residents). Risse's symmetrical claims across generations challenges pure incumbency preference. POSITION: Global justice based on collective ownership of earth across generations, creating symmetrical claims for all persons present and future.},
  keywords = {global-justice, collective-ownership, intergenerational-claims, common-resources, Medium}
}

@article{armstrong2015permanent,
  author = {Armstrong, Chris},
  title = {Against 'permanent sovereignty' over natural resources},
  journal = {Politics, Philosophy \& Economics},
  year = {2015},
  volume = {14},
  number = {2},
  pages = {129--151},
  doi = {10.1177/1470594X14523080},
  note = {CORE ARGUMENT: Challenges doctrine of permanent sovereignty over natural resources. States may regulate access to resources and determine exploitation, but shouldn't have exclusive control over income generated - should be redistributed to equalize access to well-being. Natural resources "exist independently of human contributions" so no historical entitlement justifies permanent exclusive control. Global equality demands dispersing resource rights away from nation-state. Even if state acquired territory justly, doesn't follow that it has permanent sovereignty over resource benefits. Temporal dimension: "permanent" sovereignty problematic - circumstances change, populations change, justice requirements change. RELEVANCE: Urban land is natural resource - location value not created by any individual. Armstrong's critique of permanent sovereignty challenges permanent exclusion of newcomers from valuable urban locations based solely on incumbency. If natural resources should be shared for global equality, urban land should be accessible to those needing housing, not permanently controlled by current residents/owners. However, occupancy creates legitimate claims beyond pure resource extraction. Temporal tension: Armstrong challenges historical entitlement giving permanent control, but occupancy builds over time creating strengthening claims. Housing project must navigate: natural resource dimension (land should be shared) versus occupancy dimension (residence creates place-specific claims). Armstrong's framework suggests pure exclusion of newcomers based on incumbent territorial control is unjustifiable, but doesn't address occupancy rights specifically. POSITION: Natural resources shouldn't be under permanent sovereign control but shared for global equality, challenging historical entitlement claims.},
  keywords = {natural-resources, territorial-sovereignty, distributive-justice, permanent-control, Medium}
}
