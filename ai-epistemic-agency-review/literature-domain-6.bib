@article{Coeckelbergh2022Democracy,
  author = {Coeckelbergh, Mark},
  title = {Democracy, Epistemic Agency, and AI: Political Epistemology in Times of Artificial Intelligence},
  journal = {AI and Ethics},
  year = {2022},
  doi = {10.1007/s43681-022-00239-4},
  url = {https://link.springer.com/article/10.1007/s43681-022-00239-4},
  note = {Foundational paper arguing that AI endangers democracy since it risks diminishing epistemic agency of citizens and thereby undermining relevant kind of political agency in democracy. Political democratic agency relies on epistemic agency - as citizen in democracy I need control over formation of my political knowledge. Shows epistemic bubbles and defaulting of statistical knowledge endanger epistemic agency when citizens form and revise political beliefs.}
}

@article{Coeckelbergh2025Truth,
  author = {Coeckelbergh, Mark},
  title = {LLMs, Truth, and Democracy: An Overview of Risks},
  journal = {Science and Engineering Ethics},
  year = {2025},
  volume = {31},
  number = {4},
  doi = {10.1007/s11948-025-00529-0},
  url = {https://link.springer.com/article/10.1007/s11948-025-00529-0},
  note = {Provides overview of truth-related risks in which LLMs may play role, including: hallucination and misinformation, epistemic agency and epistemic bubbles, bullshit and relativism, and epistemic anachronism and epistemic incest. Argues why these problems raise issues for democracy since they undermine its epistemic basis. Open access CC BY 4.0. Published January 2025.}
}

@article{Wright2025Cognitive,
  author = {Wright, Craig S.},
  title = {Cognitive Castes: Artificial Intelligence, Epistemic Stratification, and the Dissolution of Democratic Discourse},
  journal = {arXiv preprint},
  year = {2025},
  note = {arXiv:2507.14218},
  url = {https://arxiv.org/abs/2507.14218},
  note = {Argues AI 'functions not as epistemic leveller, but as accelerant of cognitive stratification, entrenching and formalising informational castes within liberal-democratic societies'. Analysis traces how contemporary AI systems 'selectively amplify reasoning capacity of individuals equipped with recursive abstraction, symbolic logic, and adversarial interrogation, whilst simultaneously pacifying cognitively untrained through engagement-optimised interfaces'. Creates cognitive elite - 'caste that understands logic of tools that shape everyone's informational environment'. July 2025. ~10,000 words.}
}

@article{Wihbey2024Epistemic,
  author = {Wihbey, John},
  title = {AI and Epistemic Risk for Democracy: A Coming Crisis of Public Knowledge?},
  journal = {SSRN},
  year = {2024},
  url = {https://papers.ssrn.com/sol3/papers.cfm?abstract_id=4805026},
  note = {What humans believe to be true and worthy of attention - what becomes public knowledge - may increasingly be influenced by judgments of advanced AI systems. Using AI as powerful political tool, large corporations and governments can monopolize epistemic space and, therefore, political space. As AI technologies structure creation of public knowledge, substance may be increasingly recursive byproduct of AI itself - 'epistemic anachronism'. Major paper on epistemic risk to democracy.}
}

@article{AISociety2025Automating,
  author = {Author, TBD},
  title = {Automating Epistemology: How AI Reconfigures Truth, Authority, and Verification},
  journal = {AI \& Society},
  year = {2025},
  doi = {10.1007/s00146-025-02560-y},
  url = {https://link.springer.com/article/10.1007/s00146-025-02560-y},
  note = {Introduces 'algorithmic truth' to describe epistemic shift as AI increasingly mediates public knowledge and legitimacy. Since algorithmic truth is enacted at scale and with perceived objectivity, it carries technocratic authority that may displace other forms of human reasoning and social negotiation. Transition from classical epistemology to computational epistemology marks profound reordering of knowledge practices. AI verification systems tend to reinforce epistemic centrality bias, equating institutional prominence with reliability. Public epistemology implications.}
