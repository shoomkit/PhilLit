@article{schwengerer2020online,
  author = {Schwengerer, Lukas},
  title = {Online Intellectual Virtues and the Extended Mind},
  journal = {Social Epistemology},
  year = {2020},
  volume = {35},
  number = {4},
  pages = {383--398},
  doi = {10.1080/02691728.2020.1815095},
  note = {
  CORE ARGUMENT: Argues that Clark and Chalmers' first-wave extended mind (based on parity principle) is incompatible with online intellectual virtues needed for epistemically responsible internet use. Online virtues require agents to critically evaluate and maintain their informational resources, but first-wave extension treats external resources as cognitive equals to brain processes when functionally equivalent. Proposes second-wave theories with gradient integration better accommodate virtue requirements.

  RELEVANCE: Shows tension between extended mind claims and epistemic responsibility when cognitive resources are external and potentially unreliable. This bears on offloading interpretation: if offloaded processes are genuinely cognitive, what epistemic obligations apply? Argues that gradient integration theories better capture how agents should relate to external cognitive resources.

  POSITION: Critiques first-wave extended mind using epistemological arguments, supports second-wave gradient accounts compatible with intellectual virtues.
  },
  keywords = {extended-mind-epistemology, internet-cognition, Heersmink, Medium},
  abstract = {ABSTRACT The internet has become an ubiquitous epistemic source. However, it comes with several drawbacks. For instance, the world wide web seems to foster filter bubbles and echo chambers and includes search results that promote bias and spread misinformation. Richard Heersmink suggests online intellectual virtues to combat these epistemically detrimental effects . These are general epistemic virtues applied to the online environment based on our background knowledge of this online environment. I argue that these online intellectual virtues also demand a particular view of cognitive integration. Online intellectual virtues are incompatible with a popular conception of extended minds proposed by Andy Clark and David Chalmers . I suggest that if we want to hold on to both a conception of online intellectual virtues and some conception of the extended mind, we have to accept a more gradual theory of cognitive integration along the lines of second-wave theories of the extended mind .},
  abstract_source = {s2},
}

@article{chandrasekharan2014building,
  author = {Chandrasekharan, Sanjay and Nersessian, Nancy J.},
  title = {Building Cognition: The Construction of Computational Representations for Scientific Discovery},
  journal = {Cognitive Science},
  year = {2014},
  volume = {39},
  number = {8},
  pages = {1727--1763},
  doi = {10.1111/cogs.12203},
  abstract = {Novel computational representations, such as simulation models of complex systems and video games for scientific discovery (Foldit, Ete RNA etc.), are dramatically changing the way discoveries emerge in science and engineering. The cognitive roles played by such computational representations in discovery are not well understood. We present a theoretical analysis of the cognitive roles such representations play, based on an ethnographic study of the building of computational models in a systems biology laboratory. Specifically, we focus on a case of model-building by an engineer that led to a remarkable discovery in basic bioscience. Accounting for such discoveries requires a distributed cognition (DC) analysis, as DC focuses on the roles played by external representations in cognitive processes. However, DC analyses by and large have not examined scientific discovery, and they mostly focus on memory offloading, particularly how the use of existing external representations changes the nature of cognitive tasks. In contrast, we study discovery processes and argue that discoveries emerge from the processes of building the computational representation. The building process integrates manipulations in imagination and in the representation, creating a coupled cognitive system of model and modeler, where the model is incorporated into the modeler's imagination. This account extends DC significantly, and we present some of the theoretical and application implications of this extended account.},
  note = {
  CORE ARGUMENT: Extends distributed cognition analysis beyond memory offloading to discovery processes, showing how building computational models creates coupled cognitive systems where external representations become integrated with imagination. Argues that DC analyses have overfocused on using existing external representations for memory offloading rather than examining how building representations generates new cognitive coupling.

  RELEVANCE: Distinguishes memory offloading from model-building as different forms of cognitive distribution, suggesting offloading research may capture only one dimension of external resource use. Shows how building activity creates tighter coupling than using pre-existing resources, bearing on questions about when external resources genuinely extend cognition versus merely support it.

  POSITION: Extends distributed cognition to encompass representational construction beyond offloading, arguing building processes create distinctive cognitive coupling.
  },
  keywords = {distributed-cognition, model-building, scientific-discovery, Medium}
}

@article{andrada2022varieties,
  author = {Andrada, Gloria and Clowes, Robert W. and Smart, Paul R.},
  title = {Varieties of transparency: exploring agency within AI systems},
  journal = {AI \& Society},
  year = {2022},
  volume = {37},
  number = {4},
  pages = {1465--1477},
  doi = {10.1007/s00146-021-01326-6},
  note = {
  CORE ARGUMENT: Examines how AI system transparency affects cognitive agency when such systems are integrated into human cognitive practices. Distinguishes different transparency dimensions (functional, procedural, epistemic) and argues that different forms of transparency matter for different aspects of cognitive agency. When AI systems function as cognitive resources through offloading, transparency requirements differ from when humans merely use AI outputs.

  RELEVANCE: Addresses how contemporary AI-based cognitive offloading differs from classical extended mind examples (notebooks, calculators) due to AI's opacity and adaptivity. Questions whether opaque AI systems can genuinely extend cognition or whether transparency is necessary for cognitive integration. Bears on project's focus on empirical offloading research involving digital technologies.

  POSITION: Analyzes agency requirements for AI-based cognitive extension, arguing transparency needs vary with integration depth and offloading type.
  },
  keywords = {AI-cognition, transparency, Clowes-Smart, cognitive-agency, Medium},
  abstract = {AI systems play an increasingly important role in shaping and regulating the lives of millions of human beings across the world. Calls for greater transparency from such systems have been widespread. However, there is considerable ambiguity concerning what “transparency” actually means, and therefore, what greater transparency might entail. While, according to some debates, transparency requires seeing through the artefact or device, widespread calls for transparency imply seeing into different aspects of AI systems. These two notions are in apparent tension with each other, and they are present in two lively but largely disconnected debates. In this paper, we aim to further analyse what these calls for transparency entail, and in so doing, clarify the sorts of transparency that we should want from AI systems. We do so by offering a taxonomy that classifies different notions of transparency. After a careful exploration of the different varieties of transparency, we show how this taxonomy can help us to navigate various domains of human–technology interactions, and more usefully discuss the relationship between technological transparency and human agency. We conclude by arguing that all of these different notions of transparency should be taken into account when designing more ethically adequate AI systems.},
  abstract_source = {s2},
}

@article{firth2019online,
  author = {Firth, Joseph and Torous, John and Stubbs, Brendon and Firth, Josh A. and Steiner, Genevieve Z. and Smith, Lee and Alvarez-Jimenez, Mario and Gleeson, John and Vancampfort, Davy and Armitage, Christopher J. and Sarris, Jerome},
  title = {The "online brain": how the Internet may be changing our cognition},
  journal = {World Psychiatry},
  year = {2019},
  volume = {18},
  number = {2},
  pages = {119--129},
  doi = {10.1002/wps.20617},
  abstract = {The impact of the Internet across multiple aspects of modern society is clear. However, the influence that it may have on our brain structure and functioning remains a central topic of investigation. Here we draw on recent psychological, psychiatric and neuroimaging findings to examine several key hypotheses on how the Internet may be changing our cognition. Specifically, we explore how unique features of the online world may be influencing: a) attentional capacities, as the constantly evolving stream of online information encourages our divided attention across multiple media sources, at the expense of sustained concentration; b) memory processes, as this vast and ubiquitous source of online information begins to shift the way we retrieve, store, and even value knowledge; and c) social cognition, as the ability for online social settings to resemble and evoke real-world social processes creates a new interplay between the Internet and our social lives, including our self-concepts and self-esteem. Overall, the available evidence indicates that the Internet can produce both acute and sustained alterations in each of these areas of cognition, which may be reflected in changes in the brain. However, an emerging priority for future research is to determine the effects of extensive online media usage on cognitive development in youth, and examine how this may differ from cognitive outcomes and brain impact of uses of Internet in the elderly. We conclude by proposing how Internet research could be integrated into broader research settings to study how this unprecedented new facet of society can affect our cognition and the brain across the life course.},
  note = {
  CORE ARGUMENT: Reviews empirical evidence that Internet use alters attention, memory, and social cognition, potentially reflecting neuroplastic changes. Internet's constant information availability may shift memory strategies from storage to retrieval-based approaches, representing large-scale cognitive offloading onto digital resources. Questions whether such alterations constitute genuine cognitive changes or adaptive strategy shifts.

  RELEVANCE: Provides empirical perspective on widespread cognitive offloading to Internet resources, documenting how external information availability affects internal cognitive processes. Findings bear on whether Internet-based offloading supports extended cognition claims or represents concerning cognitive dependence. Shows how philosophical debates about extension connect to empirical questions about cognitive development and neuroplasticity.

  POSITION: Reviews empirical evidence for Internet-induced cognitive changes while remaining agnostic about whether these constitute extended cognition.
  },
  keywords = {internet-cognition, empirical-evidence, memory-offloading, Medium}
}

@article{pande2017representational,
  author = {Pande, Prajakt and Chandrasekharan, Sanjay},
  title = {Representational competence: towards a distributed and embodied cognition account},
  journal = {Studies in Science Education},
  year = {2017},
  volume = {53},
  number = {1},
  pages = {1--43},
  doi = {10.1080/03057267.2017.1248627},
  note = {
  CORE ARGUMENT: Develops account of representational competence in science education based on distributed and embodied cognition, arguing that understanding scientific representations requires integrated activity across perceptual, motoric, and external representational systems. Competence emerges from coupled dynamics between body, brain, and external representations rather than internal mental models alone.

  RELEVANCE: Shows how distributed cognition framework applies to educational contexts involving external representations. Students' offloading of reasoning onto diagrams and models reflects not mere convenience but constitutive role of external structures in developing representational competence. Provides educational case for cognitive extension through representational coupling.

  POSITION: Applies distributed cognition to science education, arguing representational competence is constitutively embodied and distributed.
  },
  keywords = {distributed-cognition, science-education, representational-coupling, Medium},
  abstract = {Multiple external representations (MERs) are central to the practice and learning of science, mathematics and engineering, as the phenomena and entities investigated and controlled in these domains are often not available for perception and action. MERs therefore play a twofold constitutive role in reasoning in these domains. Firstly, MERs stand in for the phenomena and entities that are imagined, and thus make possible scientific investigations. Secondly, related to the above, sensorimotor and imagination-based interactions with the MERs make possible focused cognitive operations involving these phenomena and entities, such as mental rotation and analogical transformations. These two constitutive roles suggest that acquiring expertise in science, mathematics and engineering requires developing the ability to transform and integrate the MERs in that field, in tandem with running operations in imagination on the phenomena and entities the MERs stand for. This core ability to integrate external and internal representations and operations on them – termed representational competence (RC) – is therefore critical to learning in science, mathematics and engineering. However, no general account of this core process is currently available. We argue that, given the above two constitutive roles played by MERs, a theoretical account of representational competence requires an explicit model of how the cognitive system interacts with external representations, and how imagination abilities develop through this process. At the applied level, this account is required to develop design guidelines for new media interventions for learning science and mathematics, particularly emerging ones that are based on embodied interactions. As a first step to developing such a theoretical account, we review the literature on learning with MERs, as well as acquiring RC, in chemistry, biology, physics, mathematics and engineering, from two perspectives. First, we focus on the important theoretical accounts and related empirical studies, and examine what is common about them. Second, we summarise the major trends in each discipline, and then bring together these trends. The results show that most models and empirical studies of RC are framed within the classical information processing approach, and do not take a constitutive view of external representations. To develop an account compatible with the constitutive view of external representations, we outline an interaction-based theoretical account of RC, extending recent advances in distributed and embodied cognition.},
  abstract_source = {openalex},
}

