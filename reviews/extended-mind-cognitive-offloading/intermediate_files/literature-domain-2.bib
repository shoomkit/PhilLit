@article{oliveira2025rethinking,
  author = {Oliveira, Deivide Garcia da Silva},
  title = {Rethinking Human-AI Interactions through Maintainability: A New Criterion for Trust and Glue in the Extended Mind Thesis},
  journal = {Trans/Form/Ação},
  year = {2025},
  volume = {48},
  number = {6},
  pages = {1--20},
  doi = {10.1590/0101-3173.2025.v48.n6.e025061},
  note = {
  CORE ARGUMENT: Oliveira proposes adding "maintainability" as a fourth criterion to Clark and Chalmers' trust-glue-accessibility conditions for cognitive extension in AI contexts. While parity focuses on functional equivalence, maintainability addresses whether users can control and modify the AI systems they cognitively integrate with. This criterion responds to AI's capacity to learn user psychology and potentially manipulate cognitive processes, creating a power asymmetry not addressed by traditional parity reasoning.

  RELEVANCE: This recent paper extends parity debates to AI-human cognitive coupling, showing that functional equivalence is insufficient when external cognitive partners are adaptive and potentially manipulative. The maintainability criterion matters for cognitive offloading involving AI: even functionally equivalent AI tools may fail to constitute genuine cognitive extension if users cannot maintain control over the integration. Points toward power-sensitive supplements to parity.

  POSITION: Supplements parity with additional criterion. Adds maintainability to trust-and-glue framework.
  },
  keywords = {AI-cognition, maintainability, trust-and-glue, Low},
  abstract = {Abstract: This paper explores the implications of the Extended Mind Hypothesis (ExM), as introduced by Andy Clark and David Chalmers in 1998. Focusing on cognitive integration and the Trust and Glue criteria, we have two objectives. First, we examine how ExM reshapes perspectives on human-AI interaction, particularly by challenging the Standard model of AI. We argue that AI, as an active non-organic agent, significantly influences cognitive processes beyond initial expectations. Secondly, we propose the maintainability as a fourth criterion in the Trust and Glue criteria of ExM, in addition to trustworthiness, reliability and accessibility. This addition aims to evaluate parity in coupled systems comprehensively addressing concerns about control in human-AI interactions. We highlight the risks posed by AI’s understanding of human psychology, which may lead to unintended shifts in our objectives and choices. Our analysis concludes that maintainability serves as a critical safeguard against the evolving challenges of human-AI integration.},
  abstract_source = {s2},
}

