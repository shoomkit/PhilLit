@article{greif2015extension,
  author = {Greif, Hajo},
  title = {What is the extension of the extended mind?},
  journal = {Synthese},
  year = {2015},
  volume = {194},
  number = {11},
  pages = {4311--4336},
  doi = {10.1007/s11229-015-0799-9},
  note = {
  CORE ARGUMENT: Greif develops an aetiological functionalist account of
  extended mind that integrates extended functionalism with cognitive
  integration and complementarity principles. He argues that cognitive
  coupling should be understood constitutively in two ways: through evolved
  biological functions extended into environmental niches, and through
  developmental construction of cognitive scaffolds. This grounds extended
  mind in biological and developmental history rather than synchronic
  parity. Natural environmental features are historically prior to cultural
  artifacts in cognitive extension.

  RELEVANCE: This paper provides a biologically and developmentally grounded
  account of cognitive integration, connecting extended mind to niche
  construction theory and developmental systems theory. The complementarity
  emphasis explains how internal and external resources make distinct
  contributions without requiring functional equivalence, addressing a key
  weakness of parity-based accounts. This is relevant to understanding
  cognitive offloading as evolutionarily and developmentally scaffolded.

  POSITION: Integrates extended mind with niche construction and
  developmental systems theory through aetiological functionalism and
  complementarity.
  },
  keywords = {complementarity, niche-construction, aetiological-functionalism, High},
  abstract = {Two aspects of cognitive coupling, as brought forward in the Extended Mind Hypothesis, are discussed in this paper: (1) how shall the functional coupling between the organism and some entity in his environment be spelled out in detail? (2) What are the paradigmatic external entities to enter into that coupling? These two related questions are best answered in the light of an aetiological variety of functionalist argument that adds historical depth to the “active externalism” promoted by Clark and Chalmers and helps to counter some of the core criticisms levelled against this view. Under additional reference to conceptual parallels between the Extended Mind Hypothesis and a set of heterodox theories in biology—environmental constructivism, niche construction, developmental systems theory—an argument for the grounding of environmentally extended cognitive traits in evolved biological functions is developed. In a spirit that seeks to integrate extended functionalism with views from cognitive integration and complementarity, it is argued (ad 1) that instances of environmental coupling should be understood as being constitutive to cognitive functions in either of two distinct ways. It is further argued (ad 2) that the historically and systematically prior environmental counterparts in that coupling are features of the natural environment. Language and linguistically imbued artefacts are likely to have descended from more basic relations that have an extension over the environment.},
  abstract_source = {s2},
}

@article{schwengerer2020online,
  author = {Schwengerer, Lukas},
  title = {Online Intellectual Virtues and the Extended Mind},
  journal = {Social Epistemology},
  year = {2020},
  volume = {35},
  number = {3},
  pages = {312--322},
  doi = {10.1080/02691728.2020.1815095},
  note = {
  CORE ARGUMENT: Schwengerer argues that online intellectual virtues are
  incompatible with first-wave (Clark-Chalmers) extended mind theory but
  compatible with second-wave theories emphasizing gradual cognitive
  integration. First-wave theories treat external resources as cognitive
  when functionally equivalent to internal states, but online virtues
  require critical engagement that presupposes awareness of
  internal/external differences. Second-wave integration theories can
  accommodate virtues because they recognize degrees of integration and
  maintain some internal/external distinction.

  RELEVANCE: This paper connects extended mind debates to virtue
  epistemology, addressing whether cognitive offloading to online resources
  can be virtuous or necessarily involves epistemic vice. The argument that
  integration-based accounts better support online virtues than parity-based
  accounts provides philosophical reasons for preferring integration
  frameworks when analyzing contemporary digital offloading practices.

  POSITION: Argues second-wave extended mind theories better support online
  intellectual virtues than first-wave parity approaches.
  },
  keywords = {online-cognition, intellectual-virtues, cognitive-integration, Medium},
  abstract = {ABSTRACT The internet has become an ubiquitous epistemic source. However, it comes with several drawbacks. For instance, the world wide web seems to foster filter bubbles and echo chambers and includes search results that promote bias and spread misinformation. Richard Heersmink suggests online intellectual virtues to combat these epistemically detrimental effects . These are general epistemic virtues applied to the online environment based on our background knowledge of this online environment. I argue that these online intellectual virtues also demand a particular view of cognitive integration. Online intellectual virtues are incompatible with a popular conception of extended minds proposed by Andy Clark and David Chalmers . I suggest that if we want to hold on to both a conception of online intellectual virtues and some conception of the extended mind, we have to accept a more gradual theory of cognitive integration along the lines of second-wave theories of the extended mind .},
  abstract_source = {s2},
}

@article{sganzerla2025beyond,
  author = {Sganzerla, Lorena and Hutto, Daniel D. and Kirchhoff, Michael D.},
  title = {Beyond the extended mind: new arguments for extensive enactivism},
  journal = {Synthese},
  year = {2025},
  volume = {205},
  number = {3},
  doi = {10.1007/s11229-025-04931-w},
  note = {
  CORE ARGUMENT: Sganzerla, Hutto, and Kirchhoff develop extensive
  enactivism as an alternative to extended mind theory. They argue that
  cognition extends not through coupled systems satisfying parity or
  integration criteria, but through sensorimotor engagement that constitutes
  cognitive processes. Extensive enactivism rejects representationalism and
  functionalism underlying extended mind debates, instead grounding
  cognitive extension in embodied, environmentally embedded sensorimotor
  activity. This provides new arguments for extensive cognition that avoid
  problems facing both parity and integration approaches.

  RELEVANCE: This paper presents a radical enactivist alternative to both
  parity and integration frameworks, relevant to understanding cognitive
  offloading through sensorimotor rather than representational or functional
  frameworks. The critique of functionalist assumptions challenges whether
  offloading debates have properly understood the nature of cognitive
  processes that might extend. This offers a fundamentally different
  perspective on how external resources relate to cognition.

  POSITION: Advances extensive enactivism as a non-functionalist,
  non-representational alternative to extended mind theory.
  },
  keywords = {enactivism, extensive-cognition, sensorimotor, High},
  abstract = {Clark and Chalmers (Analysis 58:7–19, 1998) landmark paper, The Extended Mind, launched a thousand ships and changed the contours of the larger sea of theorizing about cognition. Over the past twenty-six years, it has led to intense philosophical debates about of the constitutive bounds of mind and cognition and generated multiple waves of work taking the form of various attempts to clarify and defend its core thesis. The extended mind thesis states that under certain (specialized and particular) conditions cognitive processes may be constituted by resources distributed across the brain, the body, and the environment. The extended mind thesis is part of a larger family of theoretical frameworks such as embodied cognition, distributed cognition, and various versions of enactivism (Gallagher in South J Philos 56: 421–447, 2018; Hutchins in Cognition in the wild, The MIT Press, 1995; Varela et al. in The embodied mind: cognitive science and human experience, The MIT Press, 1991; Di Paolo in Topoi 28:9–21, 2009; Hutto and Myin in Radicalizing enactivism: basic minds without content, The MIT Press, 2013; Hutto and Myin in Evolving enactivism: basic minds meet content, The MIT Press, 2017). In this paper we revive and clarify the commitments of Radical Enactivism’s Extensive Enactivism, compare it to alternatives, and provide new arguments and analyses for preferring it over what is on offer from other members of the extended-distributed-enactive family of positions.},
  abstract_source = {s2},
}

@article{chiriatti2025system,
  author = {Chiriatti, Massimo and Bergamaschi Ganapini, Marianna and Panai, Enrico and Wiederhold, Brenda K. and Riva, Giuseppe},
  title = {System 0: Transforming Artificial Intelligence into a Cognitive Extension},
  journal = {Cyberpsychology, Behavior, and Social Networking},
  year = {2025},
  volume = {28},
  number = {7},
  pages = {534--542},
  doi = {10.1089/cyber.2025.0201},
  note = {
  CORE ARGUMENT: Chiriatti and colleagues propose "System 0" as a framework
  for understanding AI as cognitive extension preceding both intuitive
  (System 1) and deliberative (System 2) thinking. AI systems shape the
  informational substrate for human cognition, functioning as active
  cognitive partners. Building on extended mind and Heersmink's integration
  criteria, they argue AI satisfies conditions for cognitive extension while
  creating paradoxes of simultaneously expanding and constraining thinking.
  They propose seven frameworks for effective human-AI cognitive
  integration, including Enhanced Cognitive Scaffolding and Symbiotic
  Division of Cognitive Labor.

  RELEVANCE: This paper applies cognitive integration frameworks to
  contemporary AI systems, directly addressing how AI-based offloading
  relates to extended cognition. The paradox of expansion and constraint
  captures tensions in cognitive offloading more generally. The seven
  integration frameworks provide concrete proposals for managing cognitive
  offloading to AI while preserving autonomy and critical thinking,
  practically relevant to understanding beneficial versus detrimental
  offloading.

  POSITION: Applies extended mind and cognitive integration to AI systems,
  proposing scaffolded frameworks for human-AI cognitive integration.
  },
  keywords = {AI-cognition, cognitive-scaffolding, human-AI-integration, Medium},
  abstract = {This paper introduces “System 0,” a conceptual framework for understanding how artificial intelligence functions as a cognitive extension preceding both intuitive (System 1) and deliberative (System 2) thinking processes. As AI systems increasingly shape the informational substrate upon which human cognition operates, they transform from passive tools into active cognitive partners. Building on the Extended Mind hypothesis and Heersmink’s criteria for cognitive extension, we argue that AI systems satisfy key conditions for cognitive integration. These include reliability, trust, transparency, individualization, and the ability to enhance and transform human mental functions. However, AI integration creates a paradox: while expanding cognitive capabilities, it may simultaneously constrain thinking through sycophancy and bias amplification. To address these challenges, we propose seven evidence-based frameworks for effective human-AI cognitive integration: Enhanced Cognitive Scaffolding, which promotes progressive autonomy; Symbiotic Division of Cognitive Labor, strategically allocating tasks based on comparative strengths; Dialectical Cognitive Enhancement, countering AI sycophancy through productive epistemic tension; Agentic Transparency and Control, ensuring users understand and direct AI influence; Expertise Democratization, breaking down knowledge silos; Social-Emotional Augmentation, addressing affective dimensions of cognitive work; and Duration-Optimized Integration, managing the evolving human-AI relationship over time. Together, these frameworks provide a comprehensive approach for harnessing AI as a genuine cognitive extension while preserving human agency, critical thinking, and intellectual growth, transforming AI from a replacement for human cognition into a catalyst for enhanced thinking.},
  abstract_source = {s2},
}

