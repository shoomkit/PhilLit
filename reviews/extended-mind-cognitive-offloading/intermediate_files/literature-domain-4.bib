@article{trybulec2015extended,
  author = {Trybulec, Barbara},
  title = {Extended Cognitive System and Epistemic Subject},
  journal = {Studies in Logic, Grammar and Rhetoric},
  year = {2015},
  volume = {40},
  pages = {111--128},
  doi = {10.1515/slgr-2015-0006},
  note = {
  CORE ARGUMENT: Trybulec analyzes the epistemic subject within extended
  cognitive systems, contrasting first-wave (Clark-Chalmers) and second-wave
  (Menary's Cognitive Integration) arguments. She argues Menary's position
  is more intuitive and fruitful than parity-based approaches and is
  compatible with Greco's virtue reliabilism. The epistemic subject is
  constituted by cognitive character comprising integrated abilities and
  processes, some of which are extended through manipulation of external
  informational structures. These constitute epistemic practices governed by
  culturally embedded norms. The epistemic subject is not extended through
  causal coupling but through practices that transform cognitive abilities.

  RELEVANCE: This paper connects cognitive integration to virtue
  epistemology, addressing how extended cognitive practices relate to
  epistemic responsibility and intellectual character. The distinction
  between extension through coupling versus transformation through practices
  is relevant to understanding whether cognitive offloading changes
  epistemic agency. The normative dimension highlights that offloading
  occurs within culturally shaped epistemic practices.

  POSITION: Integrates Menary's cognitive integration with virtue
  epistemology, emphasizing transformation through epistemic practices.
  },
  keywords = {cognitive-integration, virtue-epistemology, epistemic-subject, Medium},
  abstract = {Abstract The concept of an extended cognitive system is central to contemporary studies of cognition. In the paper I analyze the place of the epistemic subject within the extended cognitive system. Is it extended as well? In answering this question I focus on the differences between the first and the second wave of arguments for the extended mind thesis. I argue that the position of Cognitive Integration represented by Richard Menary is much more intuitive and fruitful in analyses of cognition and knowledge than the early argument formulated by Andy Clark and David Chalmers. Cognitive Integration is compatible with virtue epistemology of John Greco’s agent reliabilism. The epistemic subject is constituted by its cognitive character composed of an integrated set of cognitive abilities and processes. Some of these processes are extended, they are a manipulation of external informational structures and, as such, they constitute epistemic practices. Epistemic practices are normative; to conduct them correctly the epistemic subject needs to obey epistemic norms embedded in the cultural context. The epistemic subject is not extended because of the casual coupling with external informational artifacts which extend his mind from inside the head and into the world. Rather, cognitive practices constitute the subject’s mind, they transform his cognitive abilities, and this is what makes the mind and epistemic subject “extended”.},
  abstract_source = {s2},
}

@article{merritt2011cure,
  author = {Merritt, Michele},
  title = {The cure for the cure: Networking the extended mind},
  journal = {Philosophical Psychology},
  year = {2011},
  volume = {24},
  pages = {463--485},
  doi = {10.1080/09515089.2011.580050},
  note = {
  CORE ARGUMENT: Merritt critiques narrow readings of extended mind theory
  that focus exclusively on individual-environment coupling, arguing for a
  networked approach that incorporates social and distributed dimensions.
  She examines how cognitive resources are networked across individuals and
  artifacts, creating extended systems that transcend simple dyadic coupling.
  This networking perspective reveals that cognitive extension often occurs
  through participation in socio-technical networks rather than individual
  tool use.

  RELEVANCE: This paper addresses limitations of focusing solely on
  individual cognitive offloading, highlighting the social and networked
  nature of extended cognitive systems. The networked perspective is
  relevant to understanding how cognitive offloading operates in
  collaborative contexts and through shared resources. This connects
  individual offloading practices to broader social and technological
  infrastructures.

  POSITION: Advocates networked approach to extended mind, transcending
  individual-environment coupling.
  },
  keywords = {networked-cognition, social-extension, distributed-cognition, Low},
  abstract = {Abstract The hypothesis of extended cognition (HEC), or the claim that cognitive processes are not entirely organism-bound and can extend into the world, has received a barrage of criticism. Likewise, defenders of HEC have responded and even retreated into more moderate positions. In this paper, I trace the debate, rehearsing what I take to be the three strongest cases against HEC: nonderived content, causally natural kinds, and informational integration. I then argue that so far, the replies have been unsatisfactory, mainly because they rest on tacit assumptions about the nature of "human organisms," which are the very subjects in question. One such reply, Clark's (2008) recent hypothesis of organism-centered cognition (HOC), is shown to be a particularly hasty retreat, specifically in terms of tackling the issue of informational integration. Namely, my position is that Clark concedes too quickly that the organism is the "chief executor" of this cognitive function and I claim this on the grounds that (1) not all human organisms integrate information in the way Weiskopf (2008 Weiskopf, D. 2008. Patrolling the mind's boundaries. Erkenntnis, 68(2): 265–276. [Crossref], [Web of Science ®] , [Google Scholar]) argues they do, and (2) it is not impossible for external tools to be an informationally integrative component of a "systemic whole." Keywords: Extended MindInformational IntegrationNonderived Content Notes Note [1] The "senior partner/equal partner" description is borrowed from Dan Hutto, personal communication.},
  abstract_source = {openalex},
}

@article{greenwood2013contingent,
  author = {Greenwood, John},
  title = {Contingent transcranialism and deep functional cognitive integration: The case of human emotional ontogenesis},
