@article{levy2007rethinking,
  author = {Levy, Neil},
  title = {Rethinking Neuroethics in the Light of the Extended Mind Thesis},
  journal = {American Journal of Bioethics},
  year = {2007},
  volume = {7},
  number = {9},
  pages = {3--11},
  doi = {10.1080/15265160701518466},
  note = {
  CORE ARGUMENT: Applies extended mind thesis to neuroethics, arguing that if minds extend into environment, then ethical concerns about cognitive intervention extend beyond brain to include environmental modifications. Challenges the special status assigned to neural interventions and argues that extended mind blurs the boundary between enhancement and therapy. Contends that extended mind requires reconceptualizing personal identity and responsibility in light of environmental cognitive extension.

  RELEVANCE: This application of EMT to ethics raises questions about the normative significance of cognitive extension through offloading. If external resources genuinely constitute cognitive processes, then questions about cognitive enhancement, authenticity, and responsibility take on new dimensions. The ethical implications of offloading depend partly on whether it involves genuine cognitive extension.

  POSITION: Application of EMT to neuroethics and cognitive enhancement debates.
  },
  keywords = {extended-mind, neuroethics, cognitive-enhancement, Medium},
  abstract = {The extended mind thesis is the claim that mental states extend beyond the skulls of the agents whose states they are. This seemingly obscure and bizarre claim has far-reaching implications for neuroethics, I argue. In the first half of this article, I sketch the extended mind thesis and defend it against criticisms. In the second half, I turn to its neuroethical implications. I argue that the extended mind thesis entails the falsity of the claim that interventions into the brain are especially problematic just because they are internal interventions, but that many objections to such interventions rely, at least in part, on this claim. Further, I argue that the thesis alters the focus of neuroethics, away from the question of whether we ought to allow interventions into the mind, and toward the question of which interventions we ought to allow and under what conditions. The extended mind thesis dramatically expands the scope of neuroethics: because interventions into the environment of agents can count as interventions into their minds, decisions concerning such interventions become questions for neuroethics.},
  abstract_source = {openalex},
}

@article{aydin2013artifactual,
  author = {Aydin, Ciano},
  title = {The Artifactual Mind: Overcoming the 'Inside-Outside' Dualism in the Extended Mind Thesis and Recognizing the Technological Dimension of Cognition},
  journal = {Phenomenology and the Cognitive Sciences},
  year = {2013},
  volume = {13},
  number = {1},
  pages = {73--93},
  doi = {10.1007/s11097-013-9319-x},
  note = {
  CORE ARGUMENT: Criticizes EMT for preserving an inside-outside dualism by treating mind as an inner core that extends into external artifacts. Proposes an artifactual mind concept drawing on Peirce: mind unfolds through artifacts rather than extending from a biological core. Argues that technical artifacts shape cognitive possibilities rather than merely serving pre-established cognitive goals. Mind is technologically constituted, not merely extended.

  RELEVANCE: This critique raises questions about whether EMT truly overcomes traditional boundaries or merely relocates them. The artifactual mind concept suggests that cognitive offloading may not be extension of inner processes but rather transformation of cognitive capacities through technological mediation. This alternative framework may better capture how tools reshape what cognition is rather than merely where it occurs.

  POSITION: Post-phenomenological critique proposing artifactual mind as alternative to extended mind.
  },
  keywords = {extended-mind, artifactual-mind, technological-mediation, Medium},
  abstract = {This paper explains why Clark’s Extended Mind thesis is not capable of sufficiently grasping how and in what sense external objects and technical artifacts can become part of our human cognition. According to the author, this is because a pivotal distinction between inside and outside is preserved in the Extended Mind theorist’s account of the relation between the human organism and the world of external objects and artifacts, a distinction which they proclaim to have overcome. Inspired by Charles S. Peirce’s philosophy of mind, in particular, the author tries to find a way out of this ‘inside–outside’ fallacy. External objects, artifacts or processes should, according to him, not be conceived as inanimate and unintelligent matter utilised by a separately living, inner mental sphere that has set certain pre-established goals for itself. Mind has rather an artifactual character. It is not extended by an inner biological cognitive core but rather unfolds itself through objects and artifacts. Mind as such is, especially in our modern technological culture, shaped by virtue of and through technical artifacts. Recognizing this artifactual dimension of mind will, the author concludes, enable a more critical analysis of contemporary claims that ascribe certain original and irreducible features to thinking.},
  abstract_source = {openalex},
}

@article{baker2009persons,
