@article{ward2017brain,
  author = {Ward, Adrian F. and Duke, Kristen and Gneezy, Ayelet and Bos, Maarten W.},
  title = {Brain Drain: The Mere Presence of One's Own Smartphone Reduces Available Cognitive Capacity},
  journal = {Journal of the Association for Consumer Research},
  year = {2017},
  volume = {2},
  number = {2},
  pages = {140--154},
  doi = {10.1086/691462},
  note = {
  CORE ARGUMENT: Ward and colleagues present the "brain drain hypothesis," arguing that smartphones consume attentional resources even when not in use. Across two experiments, participants performed worse on measures of available working memory capacity and fluid intelligence when smartphones were present (on desk) versus absent (in another room), even with phones turned off. The effect was strongest for high smartphone-dependent individuals, suggesting automatic attentional processes directed toward the phone.

  RELEVANCE: This paper provides empirical evidence that smartphone presence may undermine the very cognitive resources required for their use as extended cognitive tools. The findings challenge optimistic accounts of smartphones as seamless cognitive extensions by suggesting they impose cognitive costs through attentional capture. The research connects to broader questions about when external resources enhance versus impair cognition, and whether constant availability is compatible with genuine cognitive extension.

  POSITION: Empirical psychology showing negative cognitive impacts of smartphone proximity, challenging seamless integration assumptions in extended mind theory.
  },
  keywords = {smartphone-cognition, brain-drain, attention, High},
  abstract = {Our smartphones enable—and encourage—constant connection to information, entertainment, and&#13;\neach other. They put the world at our fingertips, and rarely leave our sides. Although these devices have immense potential&#13;\nto improve welfare, their persistent presence may come at a cognitive cost. In this research, we test the “brain&#13;\ndrain” hypothesis that the mere presence of one’s own smartphone may occupy limited-capacity cognitive resources,&#13;\nthereby leaving fewer resources available for other tasks and undercutting cognitive performance. Results from two&#13;\nexperiments indicate that even when people are successful at maintaining sustained attention—as when avoiding&#13;\nthe temptation to check their phones—the mere presence of these devices reduces available cognitive capacity. Moreover,&#13;\nthese cognitive costs are highest for those highest in smartphone dependence. We conclude by discussing the&#13;\npractical implications of this smartphone-induced brain drain for consumer decision-making and consumer welfare.},
  abstract_source = {openalex},
}

@incollection{smart2017cognitive,
  author = {Smart, Paul and Heersmink, Richard and Clowes, Robert W.},
  title = {The Cognitive Ecology of the Internet},
  booktitle = {Cognition Beyond the Brain},
  year = {2017},
  pages = {251--282},
  doi = {10.1007/978-3-319-49115-8_13},
  publisher = {Springer International Publishing},
  note = {
  CORE ARGUMENT: Smart, Heersmink, and Clowes develop a "cognitive ecology" framework for understanding how the Internet transforms cognitive practices and environments. They argue the Internet creates a unique cognitive niche characterized by information abundance, networked social interactions, and constantly evolving knowledge structures. The chapter examines how web technologies enable new forms of distributed cognition, collaborative knowledge production, and cognitive niche construction while also introducing novel forms of cognitive risk.

  RELEVANCE: This work provides comprehensive philosophical analysis of Internet-specific features relevant to extended cognition debates. Unlike generic information tools, the Internet's networked, dynamic, and socially embedded nature raises distinct questions about cognitive coupling, reliability, and the boundaries of cognitive systems. The ecological perspective helps frame how digital environments shape rather than merely support cognitive processes.

  POSITION: Philosophical framework treating the Internet as a transformative cognitive ecology that fundamentally reshapes human cognitive practices.
  },
  keywords = {internet-extended-mind, cognitive-ecology, Smart-Clowes, High, INCOMPLETE, no-abstract}
}

@article{smart2017extended,
  author = {Smart, Paul},
  title = {Extended Cognition and the Internet},
  journal = {Philosophy \& Technology},
  year = {2017},
  volume = {30},
  number = {3},
  pages = {357--390},
  doi = {10.1007/s13347-016-0250-2},
  note = {
  CORE ARGUMENT: Smart provides a comprehensive philosophical analysis of Internet-extended cognition, examining whether and how Internet technologies can constitute part of extended cognitive systems. He distinguishes between different types of Internet-based cognitive extension (e.g., memory extension via cloud storage vs. reasoning extension via search engines) and evaluates them against established criteria for cognitive extension. The paper introduces concerns about "network-extended cognitive bloat" where the boundaries of cognitive systems become unclear.

  RELEVANCE: This paper systematically applies extended mind theory to Internet technologies, identifying both promising cases and potential problems. Smart's analysis helps clarify which Internet-based practices might qualify as genuine cognitive extension versus mere tool use. His discussion of cognitive bloat and boundary problems directly addresses challenges the Internet poses for traditional extended mind criteria, particularly the coupling-constitution distinction.

  POSITION: Cautiously optimistic philosophical analysis arguing Internet can support cognitive extension while identifying novel theoretical challenges.
  },
  keywords = {internet-extended-mind, extended-cognition, Smart, High},
  abstract = {The Internet is an important focus of attention for those concerned with issues of extended cognition. In particular, the application of active externalist theorizing to the Internet gives rise to the notion of Internet-extended cognition: the idea that the Internet can (on occasion) form part of an integrated nexus of material elements that serves as the realization base for human mental states and processes. The current review attempts to survey a range of issues and controversies that arise in respect of the notion of Internet-extended cognition. These include the issue of whether the Internet, as a technological system, is able to support real-world cases of cognitive extension. It also includes issues concerning the cognitive and epistemic impacts of the Internet. Finally, the review highlights a range of issues and concerns that have not been the focus of previous philosophical attention. These include issues of ‘network-extended cognitive bloat’, ‘conjoined minds’, and an entirely new form of cognitive extension that goes under the heading of ‘human-extended machine cognition’. Together, these issues serve to highlight the value and importance of Internet-extended cognition to contemporary philosophical debates about the extended mind. In particular, the notion of Internet-extended cognition has the potential to highlight points of philosophical progress that are not easily revealed by the kind of technologically low-grade cases that tend to animate the majority of philosophical discussions in this area.},
  abstract_source = {s2},
}

@article{heersmink2016internet,
  author = {Heersmink, Richard},
  title = {The Internet, Cognitive Enhancement, and the Values of Cognition},
  journal = {Minds and Machines},
  year = {2016},
  volume = {26},
  number = {4},
  pages = {389--407},
  doi = {10.1007/s11023-016-9404-3},
  note = {
  CORE ARGUMENT: Heersmink examines how Internet use affects the values that structure human cognition—what he terms "epistemic virtues" including accuracy, speed, reliability, and understanding. He argues that while Internet search enhances speed and extends accessible knowledge, it may undermine deeper understanding and critical evaluation. The paper develops a normative framework for assessing cognitive enhancement claims by examining trade-offs between different cognitive values.

  RELEVANCE: This work moves beyond descriptive questions (does Internet qualify as extended cognition?) to normative evaluation (what kind of cognition does it produce?). Heersmink's values-based approach helps address the project's concern with distinguishing beneficial from problematic forms of cognitive offloading. His analysis shows that even if Internet use constitutes cognitive extension, we must evaluate what cognitive capacities it develops versus atrophies.

  POSITION: Normative philosophical analysis examining how Internet-based cognitive extension affects the quality and character of cognition.
  },
  keywords = {internet, cognitive-enhancement, epistemic-virtues, High, INCOMPLETE, no-abstract}
}

@article{ruiz2022reexamining,
  author = {Ruiz Pardo, Ana C. and Minda, John Paul},
  title = {Reexamining the ``Brain Drain'' Effect: A Replication of Ward et al. (2017)},
  journal = {Acta Psychologica},
  year = {2022},
  volume = {230},
  pages = {103717},
  doi = {10.1016/j.actpsy.2022.103717},
  note = {
  CORE ARGUMENT: This pre-registered direct replication of Ward et al.'s (2017) Experiment 2 failed to reproduce the brain drain effect. Using identical methods (smartphone location manipulation, working memory and attention tasks), Ruiz Pardo and Minda found no significant differences in cognitive performance based on smartphone proximity or power state. The results suggest that mere smartphone presence may not consistently impair cognitive capacity as originally claimed.

  RELEVANCE: This failed replication raises important methodological questions about smartphone-cognition research and the robustness of empirical claims informing philosophical debates. The null findings complicate optimistic interpretations that smartphones seamlessly extend cognition as well as pessimistic claims about their inevitable cognitive costs. The replication crisis in psychology has direct implications for how philosophers should weight empirical evidence in extended mind debates.

  POSITION: Failed replication challenging the brain drain hypothesis and its implications for smartphone-mediated cognition.
  },
  keywords = {brain-drain, replication, smartphone-cognition, Medium},
  abstract = {The present study was a pre-registered direct replication of Ward et al.'s (2017) second experiment (OSF pre-registration found at: https://osf.io/5fq4r). This replication assigned both smartphone location (on desk, in pocket/bag, or outside of the testing room) and smartphone power (on, or off) for a total of six conditions. Participants completed an automated operation span (OSpan) task, a Cue-Dependent Go/No-Go task, and the smartphone attachment and dependency inventory. It was hypothesized that performance on an attention-demanding task (i.e., the OSpan task) would be worse for those in closer proximity to their smartphone (on desk) and that those with greater smartphone attachment and dependency would have a larger "brain drain" effect. Using the same tasks and conditions as in Ward et al.'s (2017) second experiment, the present study found that the "brain drain" effect did not replicate: there was no difference between smartphone location conditions on performance on either the o-span task or the go/no-go task. These findings demonstrate that the mere presence of one's smartphone may not be enough to affect cognitive performance. Understanding these effects is crucial in a time where smartphones are a basic necessity.},
  abstract_source = {openalex},
}

@article{bottger2023does,
  author = {Böttger, Tobias and Poschik, Michael and Zierer, Klaus},
  title = {Does the Brain Drain Effect Really Exist? A Meta-Analysis},
  journal = {Behavioral Sciences},
  year = {2023},
  volume = {13},
  number = {9},
  pages = {751},
  doi = {10.3390/bs13090751},
  note = {
  CORE ARGUMENT: Böttger and colleagues conduct a meta-analysis of 22 studies (43 effects) examining smartphone presence and cognitive performance. They find a significant overall negative effect across memory, attention, and general cognitive performance domains. However, subgroup analyses reveal substantial heterogeneity, with effect sizes varying by cognitive domain and participant nationality. The findings suggest smartphone distraction effects exist but are moderated by individual and contextual factors.

  RELEVANCE: This meta-analysis provides quantitative synthesis of the empirical literature on smartphone-cognition relationships, helping adjudicate between Ward's original claims and subsequent failed replications. The documented heterogeneity suggests the relationship between smartphone presence and cognitive performance is complex and context-dependent, complicating simple narratives about digital tools as either enhancing or impairing cognition.

  POSITION: Meta-analytic evidence supporting smartphone distraction effects while highlighting variability across contexts and populations.
  },
  keywords = {brain-drain, meta-analysis, smartphone-cognition, Medium},
  abstract = {Smartphones have become an indispensable part of everyday life. Given the current debate about the use of smartphones in classrooms and schools, it seems appropriate to examine their effects on aspects of cognitive performance in more detail. Ward and colleagues not only demonstrated the negative effect of smartphones on cognitive performance but also showed that the mere presence of these devices can have this effect—this is known as the Brain Drain effect. In the present article, a meta-analytic approach was adopted in order to verify these findings. Here we show a significant overall negative effect of smartphone use and presence. In a database search we identified 22 studies with a total of 43 relevant effects that could be assigned to the categories “memory”, “attention”, and “general cognitive performance”. A subgroup analysis suggests that not all cognitive domains are equally affected by the negative effect of smartphones. The heterogeneity of the effects reinforces this finding. The nationality of the test subjects or the origin of the studies was identified as a further key variable. Our findings also indicate that the distracting effect of smartphones varies on the area studies and further research is necessary. In view of the present research results, it seems important that people in general, and especially children and adolescents in schools and classrooms, learn how to deal with the distracting potential of smartphones.},
  abstract_source = {s2},
}

@article{parry2023mere,
  author = {Parry, Douglas A.},
  title = {Does the Mere Presence of a Smartphone Impact Cognitive Performance? A Meta-Analysis of the ``Brain Drain Effect''},
  journal = {Media Psychology},
  year = {2023},
  volume = {27},
  number = {5},
  pages = {737--762},
  doi = {10.1080/15213269.2023.2286647},
  note = {
  CORE ARGUMENT: Parry's systematic review and meta-analysis (56 studies, n=7093) finds limited support for the brain drain hypothesis. Working memory capacity showed the only statistically significant negative effect of smartphone presence, while sustained attention, response inhibition, and fluid intelligence showed null effects. The analysis reveals substantial methodological heterogeneity and generally poor statistical power across studies, limiting confidence in the evidence base.

  RELEVANCE: This comprehensive meta-analysis provides the most thorough quantitative assessment of brain drain research to date. The mixed findings—some support for working memory effects but not other domains—suggest smartphone impacts may be more domain-specific than Ward et al. originally claimed. The methodological critique raises important questions about research quality in this rapidly growing field.

  POSITION: Critical meta-analysis finding limited and domain-specific evidence for brain drain effects, highlighting methodological weaknesses.
  },
  keywords = {brain-drain, meta-analysis, methodology, Medium},
  abstract = {ABSTRACT A growing body of research investigates the general possibility that the mere presence of a smartphone might negatively impact cognitive performance, with some researchers posing the “brain drain” hypothesis which posits that smartphone presence will impair working memory capacity and fluid intelligence, but not sustained attention and response inhibition. To assess the strength of evidence for the claim that the mere presence of a smartphone can negatively impact cognitive performance, this study reports a systematic review and six meta-analyses (k = 56, n = 7093). Across cognitive functions, only a single statistically significant pooled effect was found. Working memory capacity was negatively impacted by the mere presence of a smartphone, while results for the remaining cognitive functions produced null summary effects. The analysis also finds that there is substantial methodological heterogeneity and generally poor statistical power in the domain. Overall, while the current meta-analysis provides limited support for a negative albeit smaller than theorized brain drain effect due to the mere presence of a smartphone, given methodological concerns, the extent to which the current body of literature can support or refute the hypothesis is limited.},
  abstract_source = {s2},
}

@article{smart2022phenomenal,
  author = {Smart, Paul R. and Andrada, Gloria and Clowes, Robert W.},
  title = {Phenomenal Transparency and the Extended Mind},
  journal = {Synthese},
  year = {2022},
  volume = {200},
  number = {4},
  doi = {10.1007/s11229-022-03824-6},
  note = {
  CORE ARGUMENT: Smart, Andrada, and Clowes argue that phenomenal transparency—the experiential quality of tools seeming to disappear during skilled use—is neither necessary nor sufficient for cognitive extension. They challenge proposals that transparency serves as a criterion for distinguishing genuine cognitive extension from mere tool use. Instead, transparency is a feature of situations supporting certain dispositional cognitive property ascriptions. The paper reframes transparency's role in extended mind debates.

  RELEVANCE: This analysis addresses a key criterion often invoked in evaluating whether smartphones and Internet qualify as extended cognitive systems. If transparency is required for extension, then attention-capturing digital tools would fail to qualify. Smart et al.'s argument that transparency is not necessary opens space for arguing that even non-transparent digital tools can constitute cognitive extension when appropriately integrated into cognitive practices.

  POSITION: Philosophical argument challenging transparency as a criterion for cognitive extension, with implications for digital tool assessment.
  },
  keywords = {transparency, extended-mind, Smart-Clowes, Medium},
  abstract = {Proponents of the extended mind have suggested that phenomenal transparency may be important to the way we evaluate putative cases of cognitive extension. In particular, it has been suggested that in order for a bio-external resource to count as part of the machinery of the mind, it must qualify as a form of transparent equipment or transparent technology. The present paper challenges this claim. It also challenges the idea that phenomenological properties can be used to settle disputes regarding the constitutional (versus merely causal) status of bio-external resources in episodes of extended cognizing. Rather than regard phenomenal transparency as a criterion for cognitive extension, we suggest that transparency is a feature of situations that support the ascription of certain cognitive/mental dispositional properties to both ourselves and others. By directing attention to the forces and factors that motivate disposition ascriptions, we arrive at a clearer picture of the role of transparency in arguments for extended cognition and the extended mind. As it turns out, transparency is neither necessary nor sufficient for cognitive extension, but this does not mean that it is entirely irrelevant to our understanding of the circumstances in which episodes of extended cognizing are apt to arise.},
  abstract_source = {s2},
}

@article{smart2021shedding,
  author = {Smart, Paul R.},
  title = {Shedding Light on the Extended Mind: HoloLens, Holograms, and Internet-Extended Knowledge},
  journal = {Frontiers in Psychology},
  year = {2021},
  volume = {12},
  doi = {10.3389/fpsyg.2021.675184},
  note = {
  CORE ARGUMENT: Smart examines a HoloLens mixed-reality application that overlays Internet-retrieved art information as holograms in users' visual fields. He argues this application illustrates how emerging technologies can support Internet-extended knowledge by creating tighter coupling between users and online information. The case challenges universality of traditional extended mind criteria developed for simpler technologies, suggesting criteria may need updating for advanced digital systems.

  RELEVANCE: This paper uses a concrete technological example to explore how Internet-extended cognition might be realized through emerging interfaces. The HoloLens case provides a forward-looking perspective on how digital cognitive extension might evolve beyond current smartphone and computer paradigms. Smart's analysis helps identify which features of extended mind criteria are technology-specific versus technology-neutral.

  POSITION: Philosophical analysis using mixed reality example to refine and extend extended mind theory for advanced digital technologies.
  },
  keywords = {internet-extended-knowledge, HoloLens, extended-mind, Medium},
  abstract = {The application of extended mind theory to the Internet and Web yields the possibility of Internet-extended knowledge—a form of extended knowledge that arises as a result of an individual's interactions with the online environment. The present paper seeks to advance our understanding of Internet-extended knowledge by describing the functionality of a real-world application, called the HoloArt app. In part, the goal of the paper is illustrative: it is intended to show how recent advances in mixed reality, cloud-computing, and machine intelligence might be combined so as to yield a putative case of Internet-extended knowledge. Beyond this, however, the paper is intended to support the philosophical effort to understand the notions of extended knowledge and the extended mind. In particular, the HoloArt app raises questions about the universality of some of the criteria that have been used to evaluate putative cases of cognitive extension. The upshot is a better appreciation of the way in which claims about extended knowledge and the extended mind might be affected by a consideration of technologically-advanced resources.},
  abstract_source = {s2},
}

@article{padalko2025cognitive,
  author = {Padalko, Bogdan},
  title = {Cognitive Practice in the Era of the Internet of Things: Ave, Homo Connectus!},
  journal = {Filosofiya Osvity. Philosophy of Education},
  year = {2025},
  doi = {10.31874/2309-1606-2025-31-1-7},
  note = {
  CORE ARGUMENT: Padalko argues that the Internet of Things (IoT) fundamentally reconfigures cognitive practice by embedding cognition within algorithmic and service-based systems, reducing epistemic autonomy and deepening platform dependency. He introduces "Homo connectus" as a new socio-technical form of subjectivity shaped by platform dependency, algorithmic meaning production, and reduced reflective decision-making. The Autonomy-Enabling Ratio (AER) is proposed as a metric for assessing cognitive autonomy within connected environments.

  RELEVANCE: This recent work extends extended mind debates to IoT environments, where connectivity is pervasive and often invisible. Padalko's concern with algorithmic mediation and reduced autonomy provides critical perspective on optimistic extended mind accounts. The AER metric offers a potential tool for empirically assessing when digital environments enhance versus undermine cognitive autonomy, directly relevant to evaluating smartphone and internet use.

  POSITION: Critical analysis arguing IoT reduces cognitive autonomy through algorithmic mediation and platform dependency.
  },
  keywords = {IoT, cognitive-autonomy, algorithmic-mediation, Medium},
  abstract = {This article offers a philosophical investigation of how the Internet of Things (IoT) reconfigures cognitive practice, reshaping the structure of knowledge, decision-making, and subjectivity in the digital environment. It demonstrates that IoT is not merely a technological infrastructure but a mechanism that embeds cognition within algorithmic and service-based systems, reducing epistemic autonomy and deepening dependence on platforms and automated protocols. The study conceptualizes Homo connectus as a new socio-technical form of subjectivity shaped by platform dependency, technical mediation of action, algorithmic production of meaning, and systemic constraints on reflective decision-making. These transformations affect education, knowledge production, and professional competence by introducing structural reliance on service ecosystems and reducing individual cognitive sovereignty. To analyze these dynamics, the article introduces the Autonomy-Enabling Ratio (AER), a novel metric for assessing the extent of cognitive autonomy within connected environments. AER captures the ratio between autonomous and externally regulated scenarios of knowledge, education, and professional practice, providing a tool to identify algorithmic overreach and the erosion of human agency. This work contributes to philosophical discourse by framing IoT as both a technical and epistemic phenomenon, critically examining its implications for human autonomy, meaning-making, and social interaction in the context of pervasive digital infrastructures.},
  abstract_source = {s2},
}

@misc{soldatova2025digital,
  author = {Soldatova, G. U. and Ilyukhina, S.},
  title = {Digital Extended Man Looking for His Wholeness},
  year = {2025},
  journal = {Cultural-Historical Psychology},
  doi = {10.17759/chp.2025210102},
  note = {
  CORE ARGUMENT: Soldatova and Ilyukhina examine how mixed online-offline reality creates a technologically augmented human simultaneously embodied and dematerialized through digital extensions. They explore challenges to holistic subjectivity arising from distribution across multiple digital spaces and platforms. The paper analyzes new methods for managing digital extensions, fostering coherence, and integrating digital and physical identities for conscious participation in digital practices.

  RELEVANCE: This work addresses identity and wholeness questions raised by extensive digital cognitive extension. As individuals distribute cognitive processes across multiple platforms and devices, maintaining integrated selfhood becomes a practical challenge. The focus on integration methods provides normative guidance for managing extended cognitive systems in ways that preserve rather than fragment identity.

  POSITION: Psychological analysis of challenges to integrated subjectivity in digitally extended cognitive systems.
  },
  keywords = {digital-extension, identity, wholeness, Medium},
  abstract = {The mixed online-offline reality, with the technosystem as an integral component of the digital era's ecological human system, has given rise to a new anthropological type: the technologically augmented human, enhanced by digital tools. This extended human, simultaneously embodied in the physical realm and dematerialized through extra-corporeal expansion, becomes distributed across multiple realities and digital spaces. This distribution challenges the concept of holistic subjectivity. The problem of wholeness is examined through technological, cognitive, motivational-value, and socio-behavioral dimensions. A key focus is on identifying new methods for managing digital extensions, fostering internal coherence, and integrating digital and real-world identities to enable conscious, responsible, effective, and safe participation in digital social practices. In this era of rapid digital transformation, the wholeness of modern humans must be reevaluated based on a fundamental principle: a changing individual exists within a constantly transforming world. This principle acknowledges the limitations of previous anthropological frameworks and norms in understanding humanity, recognizing humans as an open, unfinished project perpetually striving to realize their boundless potential.},
  abstract_source = {s2},
}

@article{hartmann2020smartphone,
  author = {Hartmann, M. and Martarelli, C. and Reber, Thomas P. and Rothen, N.},
  title = {Does a Smartphone on the Desk Drain Our Brain? No Evidence of Cognitive Costs Due to Smartphone Presence in a Short-term and Prospective Memory Task},
  journal = {Consciousness and Cognition},
  year = {2020},
  volume = {86},
  doi = {10.1016/j.concog.2020.103033},
  note = {
  CORE ARGUMENT: Hartmann and colleagues tested the brain drain hypothesis using short-term and prospective memory tasks. Contrary to Ward et al.'s findings, they found no evidence that smartphone presence (visible, in bag, or outside room) affected memory performance. The null results held regardless of smartphone dependency levels. The study suggests brain drain effects may not generalize across all cognitive domains or task types.

  RELEVANCE: This null finding adds to growing evidence that brain drain effects are less robust and more context-dependent than initially claimed. The domain-specificity of effects raises questions about which cognitive processes are susceptible to smartphone-related distraction and under what conditions. For extended mind theory, it suggests proximity alone may not determine whether devices function as cognitive extensions or distractors.

  POSITION: Null findings challenging generalizability of brain drain hypothesis to memory tasks.
  },
  keywords = {brain-drain, memory, null-results, Low, INCOMPLETE, no-abstract}
}

@article{baeva2022digital,
  author = {Baeva, L.},
  title = {Digital Dialogue in Learning: Cognitive, Social, Existential Features and Risks},
  journal = {RUDN Journal of Philosophy},
  year = {2022},
  doi = {10.22363/2313-2302-2022-26-2-439-453},
  note = {
  CORE ARGUMENT: Baeva examines how digitalization transforms dialogue in educational contexts, affecting cognitive, social, and existential dimensions. She argues that while digital dialogue enables access and efficiency, it can promote isolation rather than integration, altering the nature of learning. The analysis distinguishes between digital tools that scaffold genuine dialogue versus those that merely facilitate information transmission.

  RELEVANCE: This educational perspective highlights how digital mediation affects intersubjective cognitive processes often neglected in individualistic extended mind accounts. The focus on dialogue quality rather than individual cognitive capacity raises questions about when digital tools support versus undermine socially extended cognitive processes. The educational context provides concrete examples of digitally-mediated collaborative cognition.

  POSITION: Critical analysis of digital dialogue in education, highlighting risks of isolation despite connectivity.
  },
  keywords = {digital-dialogue, education, social-cognition, Low},
  abstract = {Digitalization of socio-cultural phenomena, including the education system, generates transformations of their qualitative characteristics and parameters, which requires research from the standpoint of methodological analysis and assessment of their possible consequences on humans and society. A significant element of the digital environment, in general, and educational, in particular, is the dialogue, the role of which has both cognitive and ideological, existential, social aspects. The purpose of the research is a philosophical analysis of the digital transformation of dialogue in the context of the educational process, an assessment of its potential and impact on the individual. The research methodology has a complex, interdisciplinary character and is associated with the application of an existential approach to understanding the essence of dialogue (M. Bakhtin, M. Buber, G. Marcel, E. Levinas), the theory of the development of individual thinking by L.S. Vygotsky, developed by the author of the theories of electronic (digital) culture and based on modern developments in the field of the introduction of digital tools in education. The study shows that dialogue in the digital learning environment becomes not so much a form of rapprochement, integration of subjects, as a form of autonomy, isolation, individuals, which changes the nature of learning and has social and existential consequences. This creates the need to transform the digital learning environment when using it from the position of supplementing it with ethical, socio-psychological and emotional components and support tools for the student. Based on the existential-axiological analysis, the positive and risky features of digital dialogue as one of the phenomena of electronic culture and online learning tools are revealed. The concept of digital dialogue in learning, the characteristics of its features, functions, role and influence on the learner in the digital environment are presented. The difficulties of dialogic learning characteristic of the digital environment are revealed, recommendations of a methodological and methodical nature for application in the education system are presented.},
  abstract_source = {s2},
}

@article{windhager2024digital,
  author = {Windhager, F. and Mayr, E.},
  title = {Digital Humanities and Distributed Cognition: From a Lack of Theory to its Visual Augmentation},
  journal = {Journal of Cultural Analytics},
  year = {2024},
  doi = {10.22148/001c.121866},
  note = {
  CORE ARGUMENT: Windhager and Mayr argue that digital humanities tools exemplify distributed cognition in practice, yet often lack explicit theoretical grounding. They propose that extended mind and distributed cognition theories provide productive frameworks for understanding how visualization tools and computational methods extend humanistic inquiry. The paper bridges philosophical theorizing about extended cognition with practical tool design in digital humanities.

  RELEVANCE: This application of extended mind theory to digital humanities tools illustrates how cognitive extension operates in knowledge work contexts. The focus on visualization as cognitive extension highlights non-linguistic forms of digitally-mediated cognition. The case demonstrates how theoretical frameworks from philosophy can inform practical tool design while being refined through application.

  POSITION: Application of distributed cognition theory to digital humanities, bridging theory and practice.
  },
  keywords = {digital-humanities, distributed-cognition, visualization, Low},
  abstract = {Digital humanists have often been criticized as too technology-driven and for a lack of theoretical work. In this paper, we discuss theories from Cognitive Science on the extended mind, which provide a productive framework to theorize the use of tools and technologies for the sake of cognitive self-enhancement. Viewed through this lens, humans continuously self-amplify their natural cognitive resources and processes by extending and offloading them to interactions with artifacts and other individuals in their environment. Concepts of extended cognition further sharpen the focus on multiple types of distribution: from the outlined internal-external distribution to the propositional-visual distribution of cognition, but also for the multi-instrumental distribution across multiple types of tools and tool specialist. All these aspects are relevant for future debates about a “theory gap” in the digital humanities: DH mainly builds external, technological tools, while traditional humanities develop conceptual tools—including theories—to enable and enhance the study of complex cultural phenomena. Notwithstanding the value of confrontational discussions, we argue for the benefits of understanding the strengths and limitations of instruments on both sides—and for working toward future synergies and ecologies of the humanities’ tools and minds. In this regard, we show how visualization-based DH tools might might play a major role in closing the comprehensibility gap of traditional theories in the arts and humanities.},
  abstract_source = {s2},
}

@article{leshkevich2025cognitive,
  author = {Leshkevich, Tatiana},
  title = {Cognitive Technosymbiosis and ``Subject-like'' Qualities of Artificial Intelligence},
  journal = {Philosophy of Science and Technology},
  year = {2025},
  doi = {10.21146/2413-9084-2025-30-2-33-45},
  note = {
  CORE ARGUMENT: Leshkevich examines cognitive technosymbiosis—the deep integration of human cognition with AI systems—and explores whether AI exhibits "subject-like" qualities. She warns against cognitive technodependence and "lazy brain" effects where reliance on ready-made AI solutions undermines independent thinking. The analysis distinguishes productive cognitive integration from problematic dependence, emphasizing reflexive comprehension and value-purpose imperatives.

  RELEVANCE: This work extends extended mind debates to AI-augmented cognition, where the external resource itself has computational capabilities. Leshkevich's concern with maintaining human agency and independent thought within symbiotic systems addresses normative questions about desirable forms of cognitive extension. The distinction between technosymbiosis and technodependence parallels debates about genuine extension versus mere causal support.

  POSITION: Critical analysis of AI-human cognitive integration, warning against technodependence while acknowledging symbiotic potential.
  },
  keywords = {AI, technosymbiosis, cognitive-dependence, Low},
