@article{andreoni1990impure,
  author = {Andreoni, James},
  title = {Impure Altruism and Donations to Public Goods: A Theory of Warm-Glow Giving},
  journal = {The Economic Journal},
  year = {1990},
  volume = {100},
  number = {401},
  pages = {464--477},
  doi = {10.2307/2234133},
  note = {
  CORE ARGUMENT: Andreoni introduces the concept of "warm glow" to explain charitable giving, arguing that donors derive utility both from the public good their donation provides (pure altruism) and from the act of giving itself (impure altruism). This model predicts incomplete crowding out of private donations by government provision, which pure altruism models cannot explain. The warm-glow component represents the personal satisfaction, moral fulfillment, or positive self-image donors receive from their contribution, independent of the donation's impact.

  RELEVANCE: This foundational paper is essential for understanding the motivational complexity behind charitable giving. For the research project's comparison of income versus asset-based norms, warm glow suggests that donors may respond differently to giving requirements based on whether they perceive the obligation as intrinsically satisfying or externally imposed. The distinction between pure and impure altruism helps explain why income-based norms (regular, visible giving) might generate more warm glow than asset-based norms (less frequent, less visible transfers).

  POSITION: Foundational behavioral economics paper establishing the "impure altruism" framework that has become standard in empirical studies of charitable giving.
  },
  keywords = {warm-glow, behavioral-economics, altruism, High}
}

@article{nilsson2020moral,
  author = {Nilsson, Artur and Erlandsson, Arvid and V{\"a}stfj{\"a}ll, Daniel},
  title = {Moral Foundations Theory and the Psychology of Charitable Giving},
  journal = {European Journal of Personality},
  year = {2020},
  volume = {34},
  number = {3},
  pages = {431--447},
  doi = {10.1002/per.2256},
  note = {
  CORE ARGUMENT: This study applies Moral Foundations Theory to charitable giving, finding that stronger individualizing moral intuitions (fairness and harm prevention) predict greater willingness to donate and larger donation amounts, while binding intuitions (loyalty, authority, sanctity) predict allocation toward in-group causes. Importantly, moral foundations predicted giving beyond political ideology, religiosity, and demographics, suggesting they tap into distinct psychological drivers of prosocial behavior.

  RELEVANCE: This research illuminates how different moral frameworks shape giving patterns, which is directly relevant to understanding who might be responsive to income-based versus asset-based giving norms. If individualizing foundations predict concern for distant others, these individuals might be more receptive to consequentialist arguments about effective giving from accumulated assets. The finding that moral foundations operate independently of demographics suggests that norm-setting for charitable obligations should consider psychological heterogeneity, not just economic capacity.

  POSITION: Integrates moral psychology with behavioral philanthropy research, showing that deep-seated moral intuitions shape giving patterns in ways that cross-cut standard demographic and ideological categories.
  },
  keywords = {moral-psychology, giving-motivation, individual-differences, High}
}

@article{schmitz2021billionaires,
  author = {Schmitz, Hans Peter and McCollim, Elena M.},
