@article{greaves2021longtermism,
  author = {Greaves, Hilary and MacAskill, William},
  title = {The Case for Strong Longtermism},
  journal = {Global Priorities Institute Working Paper},
  year = {2021},
  url = {https://www.globalprioritiesinstitute.org/wp-content/uploads/The-Case-for-Strong-Longtermism-GPI-Working-Paper-June-2021-2-2.pdf},
  note = {
  CORE ARGUMENT: Defends "strong longtermism"—the thesis that the most
  important feature of our actions today is their impact on the far future.
  Argues that some actions aimed at reducing existential risks deliver
  significantly larger expected benefits in the far future than any available
  near-term action. Discusses the option of investing resources in sovereign
  wealth funds with longtermist missions rather than spending on immediate
  causes, noting that compound investment returns could compensate for risks of
  future misalignment.

  RELEVANCE: Extends the patient philanthropy framework to argue that reducing
  existential risk and influencing the far future may dominate near-term
  charitable opportunities. This challenges both income-based and asset-based
  giving norms that focus on addressing current poverty or suffering. If
  longtermism is correct, optimal giving norms might involve accumulating
  resources to deploy on civilizational trajectory changes rather than
  responding to immediate needs—a consideration absent from traditional
  utilitarian giving frameworks.

  POSITION: Philosophical case for longtermism in effective altruism; extends
  patient philanthropy to very long time horizons.
  },
  keywords = {longtermism, patient-philanthropy, effective-altruism, High}
}

@article{mogensen2020maximal,
  author = {Mogensen, Andreas L.},
  title = {Maximal Cluelessness},
  journal = {The Philosophical Quarterly},
  year = {2020},
  volume = {70},
  number = {281},
  pages = {229--257},
  doi = {10.1093/pq/pqaa021},
  note = {
  CORE ARGUMENT: Argues that effective altruist cause prioritization rankings
  face a fundamental problem: the overwhelming importance and inscrutability of
  actions' indirect long-run effects ("cluelessness") combined with permissive
  decision principles for deep uncertainty (the "maximality rule") undermine
  confidence in orthodox EA conclusions. Demonstrates tension between
  longtermist perspectives, honest acknowledgment of deep uncertainty, and
  conventional EA cause rankings.

  RELEVANCE: Challenges the decision-theoretic foundations underlying both
  patient philanthropy arguments and cause prioritization frameworks that might
  inform giving norms. If we are "clueless" about long-run effects, the case
  for sophisticated asset-based giving strategies informed by expected value
  calculations weakens, potentially favoring simpler heuristics like income-
  based pledges. However, this same uncertainty might cut against confident
  prescriptions of any specific giving norm.

  POSITION: Methodological critique of effective altruism's use of expected
  value reasoning under deep uncertainty.
  },
  keywords = {cluelessness, decision-theory, effective-altruism, Medium}
}

@article{lim2019effectiveness,
  author = {Lim, Chong-Ming},
  title = {Effectiveness and Ecumenicity},
  journal = {Journal of Moral Philosophy},
  year = {2019},
  volume = {16},
  number = {4},
  pages = {493--516},
  doi = {10.1163/17455243-20180016},
  note = {
  CORE ARGUMENT: Argues that effective altruism's criticisms of "less
  effective" charities are inconsistent with EA's professed ecumenicity toward
  different moral views and evidentiary methods. Demonstrates that individuals
  may justifiably support charities other than those maximizing expected value
  if they hold different moral views, value personal connection, or have
  different risk attitudes. Effective altruists must either abandon ecumenicity
  or revise their critiques of non-optimal charities.

  RELEVANCE: Challenges the universalist implications of expected value-based
  giving frameworks that might support either patient philanthropy or specific
  asset/income-based norms. If different moral views and personal connections
  justify diverse giving patterns, this supports pluralism about giving norms
  rather than a single optimal formula. This is relevant to the project's
  investigation of whether one type of norm (income vs. asset-based) better
  tracks utilitarian obligations across diverse agents.

  POSITION: Critique of effective altruism's implicit moral monism and its
  implications for cause selection.
  },
  keywords = {effective-altruism, cause-prioritization, pluralism, Medium}
}

