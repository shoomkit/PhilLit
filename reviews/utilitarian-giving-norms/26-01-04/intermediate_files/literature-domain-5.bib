@article{caplin2023missing,
  author = {Caplin, Andrew and Leahy, John},
  title = {Missing Participants, Missing Markets, and the Social Discount Rate: Borrowing Constraints, Intergenerational Transfers, Altruism, and the Desire for Legacy},
  journal = {Annual Review of Financial Economics},
  year = {2023},
  volume = {15},
  pages = {369--394},
  doi = {10.1146/annurev-financial-101822-112948},
  note = {
  CORE ARGUMENT: Examines how missing market participants (constrained
  borrowers, future generations) affect the social discount rate. When market
  participants are missing, the population's average discount rate may differ
  from market rates. Missing current participants (e.g., constrained borrowers)
  implies average discount rates above market rates; missing future
  participants implies rates below market rates. Argues that legacy utility and
  intrapersonal discounting asymmetries (future selves discount the past, but
  not vice versa) may justify low social discount rates.

  RELEVANCE: Provides theoretical grounding for debates about appropriate
  discount rates in philanthropic decision-making. The analysis of borrowing
  constraints and missing participants connects to the project's focus on how
  asset versus income positions affect obligations: individuals with assets but
  constrained income might face different discount rates than those with high
  income but limited assets. The discussion of legacy utility relates to
  motivations for asset-based versus income-based giving.

  POSITION: Economic analysis of social discount rate incorporating missing
  markets and intergenerational considerations.
  },
  keywords = {discount-rate, social-discount-rate, intergenerational, Medium}
}

@article{lucas2023reflections,
  author = {Lucas, Deborah J.},
