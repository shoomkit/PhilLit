@misc{trammell2021dynamic,
  author = {Trammell, Philip},
  title = {Dynamic Public Good Provision under Time Preference Heterogeneity: Theory and Applications to Philanthropy},
  year = {2021},
  howpublished = {Global Priorities Institute Working Paper},
  url = {https://philiptrammell.com/static/PatienceAndPhilanthropy.pdf},
  note = {
  CORE ARGUMENT: Analyzes optimal philanthropic spending timing when funders
  have heterogeneous discount rates. Proves that allowing for time preference
  heterogeneity (rather than assuming a common discount rate) produces
  substantially different equilibrium funding behavior: patient funders invest
  the entirety of their resources for substantial periods rather than spending
  immediately. Demonstrates that patient funders' equilibrium payoff can grow
  arbitrarily large as their share of initial funding approaches zero, and
  discusses implications for legal disbursement minima.

  RELEVANCE: Directly addresses the project's temporal dimension of giving
  norms. Shows that heterogeneous time preferences among donors lead to
  coordination dynamics where more patient donors should invest while impatient
  donors spend. This suggests that optimal giving norms may differ across
  individuals based on their time preferences, complicating simple universal
  rules like "give 10% of income." The asset accumulation through patient
  investment could justify asset-based rather than income-based giving
  triggers.

  POSITION: Core contribution to patient philanthropy literature; economic
  modeling of philanthropic timing with heterogeneous agents.
  },
  keywords = {patient-philanthropy, discount-rate, decision-theory, High}
}

@misc{trammell2020discounting,
  author = {Trammell, Philip},
  title = {Discounting for Patient Philanthropists},
  year = {2020},
  howpublished = {Global Priorities Institute Technical Report},
  url = {https://philiptrammell.com/static/discounting_for_patient_philanthropists.pdf},
  note = {
  CORE ARGUMENT: Examines what discount rate patient philanthropists should use
  when evaluating the timing of charitable expenditures. Argues that
  philanthropists who care equally about helping people now versus future
  generations should remove the pure time preference component (delta) from the
  standard Ramsey discounting formula. Under this framework, with historical
  investment returns around 4-7% and a philanthropic discount rate of only 0.5-
  2%, patient philanthropists could justify saving resources for decades or
  centuries before deploying them.

  RELEVANCE: Challenges the implicit assumption in income-based giving norms
  (like tithing 10% of annual income) that resources should be deployed
  contemporaneously with when they're earned. If Trammell is correct, donors
  might better fulfill utilitarian obligations by accumulating assets through
  investment rather than giving from current income. This directly engages the
  project's question about whether asset-based norms better track utilitarian
  obligations than income-based norms.

  POSITION: Foundational patient philanthropy work; applies Ramsey discounting
  framework to philanthropic decision-making.
  },
  keywords = {discount-rate, patient-philanthropy, expected-utility, High}
}

