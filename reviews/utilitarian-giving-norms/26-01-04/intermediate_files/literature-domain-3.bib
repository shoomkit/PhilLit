@article{singer1972famine,
  author = {Singer, Peter},
  title = {Famine, Affluence, and Morality},
  journal = {Philosophy \& Public Affairs},
  volume = {1},
  number = {3},
  pages = {229--243},
  year = {1972},
  doi = {10.4324/9781315254210-1},
  note = {
  CORE ARGUMENT: Singer argues that if we can prevent something bad without sacrificing anything of comparable moral importance, we ought to do it. Applied to global poverty, this principle generates demanding obligations: affluent individuals should give until they reach marginal utility (the point where giving more would cause comparable harm to themselves). Singer distinguishes strong and weak versions but suggests even the weak version requires radical changes in giving behavior.

  RELEVANCE: This foundational paper established the philosophical basis for demanding obligations to aid that EA later operationalized. Crucially, Singer's principle is framed in terms of preventing bad outcomes, not specific resource bases (income vs. wealth). The marginal utility standard could apply to either income or accumulated assets. EA's operationalization through income-based pledges represents one implementation, but Singer's abstract principle doesn't mandate income focus. This gap between theory and practice is central to evaluating alternative giving norms.

  POSITION: Strong utilitarian obligation to give; foundational text for EA movement; abstract principle doesn't specify income vs. wealth basis.
  },
  keywords = {utilitarian-obligations, foundational, demandingness, High}
}

