@book{macaskill2015doing,
  author = {MacAskill, William},
  title = {Doing Good Better: How Effective Altruism Can Help You Make a Difference},
  year = {2015},
  publisher = {Guardian Faber Publishing},
  note = {
  CORE ARGUMENT: Introduces effective altruism to general audiences, arguing that charitable giving should be optimized through evidence and reason to maximize impact. Develops the case for earning to give (choosing high-income careers to donate more), cause prioritization (focusing on neglected, tractable problems), and using cost-effectiveness analysis to select charities. Presents the framework that would become institutionalized through organizations like Giving What We Can.

  RELEVANCE: Foundational text establishing EA's practical norms, including the emphasis on income-based giving commitments. The "earning to give" framework inherently privileges income over assets as the relevant measure for moral obligation. Essential for understanding why EA institutions structured pledges around income percentage rather than wealth percentage. MacAskill's framework treats current income as the primary locus of moral agency, which shapes subsequent norm design.

  POSITION: Foundational EA philosophy emphasizing consequentialist optimization and personal agency in career choice.
  },
  keywords = {effective-altruism, earning-to-give, giving-pledges, High}
}

@article{singer2015most,
  author = {Singer, Peter},
  title = {The Most Good You Can Do: How Effective Altruism Is Changing Ideas About Living Ethically},
  year = {2015},
  journal = {Yale University Press},
  note = {
  CORE ARGUMENT: Extends Singer's earlier arguments about obligations to aid (from "Famine, Affluence, and Morality") into the effective altruism framework. Argues that if we have obligations to prevent suffering, we must discharge those obligations in the most effective way possible. Provides philosophical grounding for EA's evidence-based approach and introduces the effective altruism movement to philosophical audiences.

  RELEVANCE: Bridges Singer's foundational philosophical work on aid obligations with the institutionalized EA movement. Important because Singer's original arguments in "Famine, Affluence, and Morality" could justify either income-based or asset-based obligations, yet his EA work implicitly adopts income-focused frameworks. This text helps explain how philosophical foundations translated into specific institutional forms.

  POSITION: Utilitarian foundation for effective altruism emphasizing obligation to optimize aid.
  },
  keywords = {effective-altruism, utilitarianism, aid-obligations, High}
}

@book{macaskill2022what,
  author = {MacAskill, William},
  title = {What We Owe the Future},
  year = {2022},
  publisher = {Basic Books},
  note = {
  CORE ARGUMENT: Develops longtermism as an extension of effective altruism, arguing that positively influencing the long-term future should be a key moral priority. Contends that the potential value of the far future (billions of future people over millions of years) vastly outweighs present concerns, implying we should prioritize existential risk reduction and trajectory changes over near-term poverty relief. Introduces concepts of lock-in, value drift, and moral importance of future generations.

  RELEVANCE: Represents a major evolution in EA thinking with direct implications for giving norms. If longtermism is correct, income-based pledges focused on global poverty may be misallocated; resources should instead flow to AI safety, biosecurity, and other existential risk work. The temporal extension challenges whether EA's institutionalized giving structures (designed for evaluable, near-term charities) remain appropriate. Raises questions about whether future-focused giving requires different commitment structures than income-based pledges.

  POSITION: Longtermist expansion of EA emphasizing far-future prioritization over near-term welfare.
  },
  keywords = {longtermism, effective-altruism, future-generations, existential-risk, High}
}

@book{ord2020precipice,
  author = {Ord, Toby},
  title = {The Precipice: Existential Risk and the Future of Humanity},
  year = {2020},
  publisher = {Hachette Books},
  note = {
  CORE ARGUMENT: Argues that humanity faces unprecedented existential risks in the coming century, including engineered pandemics, artificial intelligence, and climate change. Contends that reducing existential risk should be a moral priority given the astronomical value of humanity's potential future. Provides quantitative estimates of extinction probabilities and argues for institutional responses to safeguard humanity's long-term trajectory.

  RELEVANCE: Complements MacAskill's longtermism with focus on specific existential risks. Relevant to the research project because Ord's framework suggests charitable resources should prioritize existential risk reduction over poverty relief, challenging the income-pledge model designed for near-term global health interventions. The emphasis on institutional and policy work (rather than individual donations) may also challenge income-based individual pledges as the optimal giving structure.

  POSITION: Existential risk focus within longtermist EA, emphasizing catastrophic risk reduction.
  },
  keywords = {existential-risk, longtermism, effective-altruism, High}
}

@article{greaves2021case,
  author = {Greaves, Hilary and MacAskill, William},
  title = {The case for strong longtermism},
  year = {2021},
  note = {
  CORE ARGUMENT: Presents the philosophical argument for "strong longtermism": in a wide range of decision situations, the option that is best for the long-term future is the option that is best overall. Argues this follows from plausible axiological claims about the moral importance of future people combined with empirical claims about our ability to predictably influence the far future. Distinguishes between axiological and deontic versions of longtermism.

  RELEVANCE: The most rigorous philosophical statement of longtermism's core thesis. Directly relevant because if strong longtermism is correct, EA's income-pledge model focused on GiveWell-recommended charities may be fundamentally misguided. The paper's focus on what is "best overall" rather than "what satisfies our obligations" also has implications for whether giving norms should be framed as duties (like pledges) or optimization targets.

  POSITION: Philosophical defense of strong longtermism within consequentialist framework.
  },
  keywords = {longtermism, effective-altruism, future-generations, consequentialism, High}
}

@article{tarsney2023epistemic,
  author = {Tarsney, Christian},
  title = {The epistemic challenge to longtermism},
  journal = {Synthese},
  volume = {201},
  pages = {1--37},
  year = {2023},
  doi = {10.1007/s11229-023-04153-y},
  note = {
  CORE ARGUMENT: Challenges longtermism on epistemic grounds, arguing that our ability to predict and influence the far future is so limited that longtermist recommendations are unjustified. Contends that uncertainty and cluelessness about long-term effects undermine confident claims that we should prioritize existential risk reduction over near-term welfare improvements. Examines whether simple decision-theoretic approaches can handle deep uncertainty about far-future effects.

  RELEVANCE: Represents major internal critique within EA/longtermism debate. Relevant to research project because epistemic challenges to longtermism strengthen the case for near-term, measurable interventions (where income-pledge model was designed). If we cannot reliably identify far-future impacts, income-based commitments to proven interventions (global health, poverty) may be more defensible than asset-based commitments to speculative longtermist causes.

  POSITION: Internal critique of longtermism based on epistemic limitations.
  },
  keywords = {longtermism, epistemology, effective-altruism, cluelessness, High}
}

@article{lim2019effectiveness,
  author = {Lim, Chong-Ming},
  title = {Effectiveness and Ecumenicity},
  journal = {Journal of Moral Philosophy},
  volume = {16},
  number = {5},
  pages = {590--615},
  year = {2019},
  doi = {10.1163/17455243-20180016},
  note = {
  CORE ARGUMENT: Argues that effective altruism's claim to be ecumenical toward different moral views is inconsistent with its criticisms of charities that do not maximize measurable welfare. Contends that individuals with different moral commitments (e.g., special duties to compatriots, emphasis on rights rather than welfare) may justifiably support charities that EA dismisses as ineffective. EA's evidence-based framework privileges utilitarian maximization over other legitimate moral considerations.

  RELEVANCE: Key critique of EA's foundational assumptions with implications for giving norm design. If EA is not genuinely ecumenical, its income-pledge model embodies specifically utilitarian commitments rather than universally compelling moral requirements. This challenges whether EA-style giving norms should be presented as what "we" ought to do versus what utilitarians specifically should do. Relevant for assessing whether income-based norms have broader justification than asset-based alternatives.

  POSITION: Critical perspective questioning EA's compatibility with moral pluralism.
  },
  keywords = {effective-altruism, ecumenicity, moral-pluralism, critique, High}
}

@article{rubenstein2016lessons,
  author = {Rubenstein, Jennifer},
  title = {The Lessons of Effective Altruism},
  journal = {Ethics \& International Affairs},
  volume = {30},
  pages = {511--526},
  year = {2016},
  doi = {10.1017/S0892679416000484},
  note = {
  CORE ARGUMENT: Identifies valuable lessons from effective altruism (emphasis on evidence, cost-effectiveness) while critiquing its limitations. Argues EA neglects questions of justice, rights, and systemic change in favor of individual optimization. Contends that EA's focus on measurable interventions creates blind spots regarding political and structural dimensions of global poverty.

  RELEVANCE: Important early critique highlighting what EA's income-pledge model neglects: questions of how wealth was acquired, systemic causes of poverty, and political obligations distinct from charitable aid. Relevant because the choice between income-based and asset-based norms may implicate different theories of justice (income reflects recent productive contribution; assets may reflect historical injustice). Rubenstein's critique suggests EA's giving norms are too narrow even if optimized within that frame.

  POSITION: Critical perspective emphasizing EA's neglect of justice and structural causes.
  },
  keywords = {effective-altruism, critique, justice, systemic-change, Medium}
}

@article{mclaughlin2025visionaries,
  author = {McLaughlin, Alex},
  title = {Visionaries and Crackpots, Maniacs and Saints: Existential Risk and the Politics of Longtermism},
  journal = {Ratio},
  volume = {38},
  year = {2025},
  doi = {10.1111/rati.12449},
  note = {
  CORE ARGUMENT: Argues that longtermism's focus on existential risk leads to implausible and unattractive political positions. Critiques Toby Ord's "grand strategy" as antidemocratic and elitist, and William MacAskill's "political experimentalism" as crude libertarianism. Contends that longtermists are unaware of the radical political implications of their positions or how those positions depart from mainstream advocacy.

  RELEVANCE: Recent critical assessment of longtermism's political implications. Relevant because if longtermism entails antidemocratic elitism, this undermines the case for redirecting EA's income-based giving from poverty relief to longtermist causes. The political critique suggests EA's original income-pledge model (supporting democratic, accountable interventions like global health) may be preferable to longtermist alternatives that bypass democratic accountability.

  POSITION: Critical perspective on longtermism's political and democratic implications.
  },
  keywords = {longtermism, critique, political-philosophy, elitism, Medium}
}

