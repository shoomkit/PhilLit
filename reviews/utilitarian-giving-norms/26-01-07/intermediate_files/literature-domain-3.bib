}

@article{macaskill2016when,
  author = {MacAskill, William},
  title = {When Should an Effective Altruist Donate?},
  year = {2016},
  note = {
  CORE ARGUMENT: Addresses the temporal question of when to donate within an EA framework. Considers whether to donate now or invest and donate later, examining factors like discount rates, learning value, movement building, and the trajectory of charitable opportunities. Argues against simple answers, suggesting the decision depends on specific empirical parameters and one's comparative advantage.

  RELEVANCE: Directly addresses practical questions about EA giving norms beyond the simple "10% of income" pledge. The temporal dimension (give now vs. later) interacts with the income vs. assets question: if you should invest and give later, this implies assets (investment principal) become morally relevant, not just current income. MacAskill's analysis suggests EA norms may be more complex than the income-pledge model captures.

  POSITION: Practical EA reasoning about temporal allocation of giving resources.
  },
  keywords = {effective-altruism, giving-timing, investment, Medium}
}

