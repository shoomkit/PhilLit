@book{murphy2000moral,
  author = {Murphy, Liam B.},
  title = {Moral Demands in Nonideal Theory},
  year = {2000},
  publisher = {Oxford University Press},
  address = {New York},
  doi = {10.1093/oso/9780195079760.001.0001},
  note = {
  CORE ARGUMENT: Proposes the Cooperative Principle: under conditions of partial compliance, agents are required to do only their fair share of the optimific collective action, not to compensate for others' failures. Argues this avoids extreme demands without abandoning consequentialism's fundamental insights. Distinguishes ideal theory (full compliance) from nonideal theory (partial compliance) and contends that most demandingness objections mistakenly apply ideal theory standards to nonideal conditions.

  RELEVANCE: Directly applicable to comparing income vs. asset-based giving norms. If most affluent people don't comply with giving obligations, Murphy's principle limits individual obligations to fair share contributions. The question becomes whether fair shares should be calculated based on income or assets, and whether asset-based norms require excessive individual sacrifice to compensate for collective failures. The cooperative framework may support income-based norms if asset liquidation demands exceed fair shares.

  POSITION: Moderate consequentialism grounded in fairness considerations under partial compliance; limits demands without abandoning consequentialist foundations.
  },
  keywords = {demandingness, cooperative-principle, moderate-position, partial-compliance, High}
}

@book{cullity2004moral,
  author = {Cullity, Garrett},
  title = {The Moral Demands of Affluence},
  year = {2004},
  publisher = {Clarendon Press},
  address = {Oxford},
  doi = {10.1093/0199258112.001.0001},
  note = {
  CORE ARGUMENT: Addresses the Life-Saving Analogy problem: if you ought to save one person at small cost, iterative reasoning suggests you ought to give until impoverished. Argues this reasoning is fallacious because beneficence obligations are sensitive to the presence of competing claims from other potential beneficiaries. Develops an account of "appropriate impartiality" as fairness that limits demands without requiring full cost-benefit maximization. Distinguishes between directionless and directed beneficence.

  RELEVANCE: The iterative reasoning problem is crucial for assessing asset-based norms. If agents must liquidate assets to help others, and helping one person generates obligation to help the next, asset-based norms may create unsustainable iteration toward impoverishment. Cullity's solution via "appropriate impartiality" suggests limits based on fairness considerations rather than personal prerogatives alone. His framework helps assess whether asset liquidation demands respect or violate appropriate boundaries on beneficence iteration.

  POSITION: Moderate consequentialism limiting demands through fairness-based impartiality constraints; rejects both extreme demands and agent-centered prerogatives.
  },
  keywords = {demandingness, iterative-reasoning, moderate-position, appropriate-impartiality, High}
}

@book{mulgan2001demands,
  author = {Mulgan, Tim},
  title = {The Demands of Consequentialism},
  year = {2001},
  publisher = {Clarendon Press},
  address = {Oxford},
  doi = {10.1093/oso/9780198250937.001.0001},
  note = {
  CORE ARGUMENT: Develops a "realm-based" consequentialism dividing moral life into distinct realms (subsistence, survival, sacrifice) governed by different principles. In subsistence realm, demands are moderate; in survival realm where basic needs are threatened, demands become more stringent; in sacrifice realm, supererogatory acts are encouraged but not required. Rejects both Scheffler's hybrid theory and Slote's satisficing consequentialism as inadequate solutions to demandingness.

  RELEVANCE: The realm-based approach offers a framework for assessing whether asset liquidation crosses boundaries between moral realms. Income-based norms might remain in subsistence realm, while asset-based norms requiring liquidation could enter sacrifice realm. Mulgan's framework suggests different moral principles apply in different contexts, potentially supporting income-based norms if asset demands exceed subsistence realm boundaries. However, the division between realms may seem arbitrary.

  POSITION: Moderate consequentialism with realm-based differentiation; rejects both stringent maximization and agent-relative prerogatives.
  },
  keywords = {demandingness, moderate-position, realm-based, High}
}

@article{murphy1993demands,
  author = {Murphy, Liam B.},
  title = {The Demands of Beneficence},
  journal = {Philosophy \& Public Affairs},
  year = {1993},
  volume = {22},
  number = {4},
  pages = {267--292},
  note = {
  CORE ARGUMENT: Early articulation of the cooperative principle argument. Challenges the standard consequentialist requirement to make up for others' failures to contribute their share to optimal outcomes. Argues that in conditions of partial compliance, beneficence demands should be limited to one's fair share of collective optimific action. Criticizes Singer's drowning child analogy as misleading because it assumes sole responsibility rather than shared obligation context.

  RELEVANCE: This seminal article provides the theoretical foundation for limiting giving demands based on fairness considerations. Directly relevant to comparing income vs. asset-based implementations: if most people don't give from assets, should compliant individuals liquidate assets to compensate? Murphy's framework suggests not, supporting income-based norms as potentially less demanding of individual agents compensating for collective failures.

  POSITION: Cooperative consequentialism; limits individual obligations to fair shares under partial compliance.
  },
