@article{braddock2013defusing,
  author = {Braddock, Matthew},
  title = {Defusing the Demandingness Objection: Unreliable Intuitions},
  journal = {Journal of Social Philosophy},
  year = {2013},
  volume = {44},
  number = {2},
  pages = {169--191},
  doi = {10.1111/josp.12018},
  note = {
  CORE ARGUMENT: Argues demandingness intuitions are unreliable because they're influenced by self-serving bias, status quo bias, and salience effects. Empirical evidence suggests people's judgments about what's too demanding are systematically distorted by motivated reasoning and cognitive biases favoring their current behavior. Therefore demandingness intuitions should not be given significant weight in moral theorizing.

  RELEVANCE: If demandingness intuitions are unreliable, this undermines objections to asset-based norms based on their seeming excessively demanding. People may judge asset liquidation as too demanding due to bias toward protecting their own wealth rather than legitimate moral concerns. However, this empirical debunking strategy cuts both ways: compliance and feasibility considerations for implementation may still favor less demanding income-based norms even if demandingness intuitions per se are unreliable.

  POSITION: Empirical debunking of demandingness intuitions; defends consequentialism against objection.
  },
  keywords = {demandingness, empirical-ethics, cognitive-bias, Low}
}

