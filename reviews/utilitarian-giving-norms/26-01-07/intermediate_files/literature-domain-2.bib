@article{hooker2000demandingness,
  author = {Hooker, Brad},
  title = {The Demandingness Objection},
  journal = {The Oxford Handbook of Consequentialism},
  year = {2020},
  doi = {10.1093/oxfordhb/9780190905323.013.13},
  note = {
  CORE ARGUMENT: Traces development of demandingness objection as reaction to impartial act-consequentialism's beneficence requirements toward strangers. Distinguishes demandingness from related objections (alienation, integrity, special relationships). Argues rule consequentialism offers superior response to demandingness than act-consequentialist strategies, since internalized rules can limit demands while maintaining consequentialist foundations.

  RELEVANCE: Rule consequentialism may support different giving norms than act consequentialism. If internalized income-based norms produce better overall consequences than internalized asset-based norms (due to compliance, psychological effects, social coordination), rule consequentialism favors income-based implementation even if asset-based would be superior in individual cases. Hooker's framework suggests focusing on rules people can realistically internalize and follow.

  POSITION: Rule consequentialism as response to demandingness; argues rules can limit demands while preserving consequentialist justification.
  },
  keywords = {demandingness, rule-consequentialism, Medium}
}

@article{norcross2020scalar,
  author = {Norcross, Alastair},
  title = {The Scalar Approach to Consequentialism},
  booktitle = {Morality by Degrees},
  year = {2020},
  publisher = {Oxford University Press},
  pages = {14--47},
  doi = {10.1093/oso/9780198844990.003.0002},
  note = {
  CORE ARGUMENT: Defends scalar consequentialism which abandons deontic categories (right/wrong, obligatory/supererogatory) in favor of purely comparative rankings of actions by their consequences. Actions are simply better or worse than alternatives, providing stronger or weaker reasons. This avoids arbitrary threshold-setting problems that plague both maximizing and satisficing approaches, and eliminates demandingness objections that presuppose deontic distinctions.

  RELEVANCE: Scalar approach potentially dissolves the question of whether asset-based norms are "too demanding" by rejecting the obligatory/supererogatory distinction entirely. Instead of asking which norm is obligatory, scalar framework asks which norm provides stronger reasons relative to alternatives. This may support nuanced comparison: asset-based norms provide stronger reasons when assets are easily liquid, weaker reasons when liquidation is costly. Avoids problematic threshold-setting.

  POSITION: Scalar consequentialism; rejects deontic categories at fundamental level while allowing pragmatic use at application level.
  },
  keywords = {demandingness, scalar-consequentialism, deontic-categories, Medium}
}

@article{bradley2006satisficing,
  author = {Bradley, Ben},
  title = {Against Satisficing Consequentialism},
  journal = {Utilitas},
  year = {2006},
  volume = {18},
  number = {2},
  pages = {97--108},
  doi = {10.1017/s0953820806001877},
  note = {
  CORE ARGUMENT: Argues satisficing consequentialism is unacceptable because all versions permit "gratuitous prevention of goodness"—bringing about suboptimal outcomes to prevent better outcomes from obtaining. Shows this problem afflicts both simple threshold satisficing and more sophisticated effort-based versions. Concludes satisficing fails to solve demandingness problem while introducing worse problems.

  RELEVANCE: If satisficing approaches are flawed as Bradley argues, this eliminates one potential moderate position for defending income-based norms against more demanding asset-based norms. Cannot appeal to "income-based norms are good enough" if satisficing is incoherent. This pushes toward either accepting stringent asset-based demands (if maximizing) or finding alternative moderate positions (Murphy's cooperation, Cullity's iteration limits, or scalar approaches).

  POSITION: Critique of satisficing consequentialism; defends maximizing consequentialism by elimination.
  },
  keywords = {satisficing, demandingness, critique, Medium}
}

