@article{case2016rethinking,
  author = {Case, Spencer},
  title = {Rethinking Demandingness: Why Satisficing Consequentialism and Scalar Consequentialism Are Not Less Demanding Than Maximizing Consequentialism},
  journal = {Journal of Ethics \& Social Philosophy},
  year = {2016},
  volume = {10},
  number = {1},
  pages = {1--8},
  doi = {10.26556/jesp.v10i1.182},
  note = {
  CORE ARGUMENT: Argues that satisficing and scalar consequentialism are not genuinely less demanding than maximizing consequentialism because they maintain that agents have most reason to maximize the good. Even if these theories don't classify suboptimal acts as "wrong," they still judge agents morally criticizable for failing to maximize. Thus alternative consequentialist theories don't escape demandingness despite rejecting maximization requirement.

  RELEVANCE: If Case is correct that alternative consequentialist frameworks remain effectively as demanding as maximizing consequentialism, then neither satisficing nor scalar approaches provide theoretical resources for defending income-based norms as less demanding than asset-based norms. This pushes toward either accepting stringent asset-based demands or adopting non-consequentialist moderate positions (agent-relative prerogatives, Murphy's cooperation). Suggests demandingness problem is deeper than structure of consequentialist theory.

  POSITION: Critique of satisficing and scalar consequentialism as solutions to demandingness; argues they remain implicitly demanding.
  },
  keywords = {demandingness, satisficing, scalar-consequentialism, critique, Medium}
}
