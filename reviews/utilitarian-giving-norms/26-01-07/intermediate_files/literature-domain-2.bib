}

@article{sobel2007impotence,
  author = {Sobel, David},
  title = {The Impotence of the Demandingness Objection},
  journal = {Philosopher's Imprint},
  year = {2007},
  volume = {7},
  note = {
  CORE ARGUMENT: Argues that the demandingness objection cannot provide independent grounds for rejecting consequentialism because it presupposes prior commitments to non-consequentialist values. The objection's force depends on antecedent beliefs about agent-relative prerogatives or personal cost thresholds that consequentialism rejects. Thus the objection begs the question against consequentialism rather than providing neutral grounds for its rejection.

  RELEVANCE: Challenges whether aggregate demandingness provides genuine grounds for preferring income-based over asset-based norms from within utilitarian framework. If Sobel is correct, the mere fact that asset-based norms are more demanding cannot ground a utilitarian argument against them; demandingness concerns must be independently justified. This suggests focusing on other considerations (efficiency, compliance, collective action) rather than demandingness per se when comparing implementations.

  POSITION: Defends consequentialism against demandingness objections; argues objection lacks independent force.
  },
  keywords = {demandingness, defense-of-consequentialism, meta-ethical, Medium}
}

