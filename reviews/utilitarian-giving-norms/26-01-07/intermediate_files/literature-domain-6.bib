}

@article{luccasen2017warmglow,
  author = {Luccasen, R. Andrew and Grossman, Philip J.},
  title = {Warm-Glow Giving: Earned Money and the Option to Take},
  journal = {Economic Inquiry},
  year = {2017},
  volume = {55},
  number = {2},
  pages = {996--1006},
  doi = {10.1111/ecin.12417},
  note = {
  CORE ARGUMENT: Experimental study examining how warm glow varies with source of endowment (earned vs. windfall) and option to take from recipient. Finds that warm-glow giving is stronger when money is earned rather than windfall, and when there is an explicit option to take (making generosity more salient). This suggests giving utility depends on perceived deservingness and moral context, not just amount donated.

  RELEVANCE: Implications for income vs. asset-based norms: earned income might generate stronger warm glow than wealth appreciation (which feels more like windfall). This could make income-based norms psychologically easier to comply with because donors experience more intrinsic satisfaction. However, assets accumulated through saving (earned delayed consumption) might generate warm glow similar to earned income. The framing of giving norms matters for psychological sustainability.

  POSITION: Experimental evidence for context-dependence of warm glow. Challenges the view that warm glow is purely about amount given. Suggests norm design must consider how resource source affects intrinsic giving motivation.
  },
  keywords = {warm-glow, experimental, source-effects, framing, High}
}

@article{ferrara2020trust,
