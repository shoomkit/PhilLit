@article{meer2020,
  author = {Meer, Jonathan and Priday, Benjamin A.},
  title = {Generosity Across the Income and Wealth Distributions},
  journal = {National Tax Journal},
  year = {2020},
  volume = {74},
  number = {3},
  pages = {655--687},
  doi = {10.1086/714998},
  note = {
  CORE ARGUMENT: Using Panel Study of Income Dynamics data, finds that propensity to donate and amount given increase with household resources. However, the percentage of income given is relatively flat across the income distribution after accounting for outliers—contradicting the common claim that poor give higher percentages. Both income and wealth independently predict giving, with wealth effects being substantial. Extreme outlier households are characterized by specific demographic profiles.

  RELEVANCE: Challenges the "U-shaped giving" narrative that poor and rich give more as percentages than middle class. This finding is crucial for evaluating whether percentage-based norms would burden different income groups differently. The independent effects of income and wealth suggest that asset-based norms capture additional capacity to give beyond what income-based norms would capture. Directly relevant to questions about which baseline is more equitable.

  POSITION: Empirical evidence against regressive giving patterns. Supports the feasibility of percentage-based norms across income distribution while showing wealth as an independent predictor, suggesting hybrid norms might be optimal.
  },
  keywords = {income-wealth-distinction, giving-patterns, PSID-data, High}
}

@article{wiepking2012perception,
  author = {Wiepking, Pamala and Breeze, Beth},
  title = {Feeling Poor, Acting Stingy: The Effect of Money Perceptions on Charitable Giving},
  journal = {International Journal of Nonprofit and Voluntary Sector Marketing},
  year = {2012},
  volume = {17},
  number = {1},
  pages = {13--24},
  doi = {10.1002/NVSM.415},
  note = {
  CORE ARGUMENT: Demonstrates that subjective perception of financial resources affects giving independently of actual income and wealth. People who feel financially insecure give less, even controlling for objective financial situation. Subjective financial strain has a stronger negative effect on giving than objective measures like income or debt levels. This suggests psychological factors mediate the resource-giving relationship.

  RELEVANCE: Critical for understanding psychological feasibility of giving norms. If subjective perceptions matter more than objective resources, then asset-based norms might face psychological resistance even when objectively affordable, because wealth feels less liquid and secure than income. Conversely, income-based norms might be more psychologically tractable because regular income feels more available for discretionary use. Highlights the importance of psychological framing in norm implementation.

  POSITION: Emphasizes psychological mediation between resources and behavior. Suggests that effective norms must address not just objective capacity but also subjective perceptions of affordability and security.
  },
  keywords = {psychological-factors, subjective-perception, financial-strain, High}
}

@article{andreoni2017pledging,
  author = {Andreoni, James and Serra-Garcia, Marta},
  title = {The Pledging Puzzle: How Can Revocable Promises Increase Charitable Giving?},
  journal = {Journal of Economic Behavior \& Organization},
  year = {2017},
  volume = {138},
  pages = {47--65},
  doi = {10.1016/j.jebo.2017.04.007},
  note = {
  CORE ARGUMENT: Addresses the paradox that non-binding pledges increase giving even though they are revocable and unenforceable. Develops a theory of time-inconsistent altruism where people are present-biased regarding charitable giving (more altruistic about future giving than present). Pledges serve as commitment devices that allow present selves to constrain future selves. Experimental evidence shows pledges increase giving by 20-30%, with effects concentrated among sophisticated time-inconsistent givers.

  RELEVANCE: Directly relevant to questions about implementing giving norms through pledge mechanisms. If people are time-inconsistent about giving, commitment devices like pledges can help implement either income-based or asset-based norms by allowing people to commit their future selves. However, the effectiveness depends on recognizing one's own time inconsistency. Asset-based pledges might be particularly effective since wealth is more stable and predictable than future income, reducing uncertainty about ability to fulfill the pledge.

  POSITION: Experimental evidence for commitment devices as implementation mechanisms. Shows that psychological sophistication about one's own time inconsistency is crucial. Suggests pledge-based norms could work for either income or assets, but with different psychological requirements.
  },
  keywords = {commitment-devices, pledges, time-inconsistency, experimental, High}
}

@article{andreoni2016time,
  author = {Andreoni, James and Serra-Garcia, Marta},
  title = {Time-Inconsistent Charitable Giving},
  journal = {NBER Working Paper},
  year = {2016},
  doi = {10.3386/w22824},
  note = {
  CORE ARGUMENT: Extends the theory of time-inconsistent preferences to charitable giving. Shows that people exhibit present bias in giving decisions—preferring to delay donations and being more generous about future commitments than present ones. This creates a role for commitment devices. Distinguishes between naive and sophisticated time-inconsistent givers, with sophisticated givers being more responsive to commitment opportunities. Experimental evidence confirms these predictions.

  RELEVANCE: Provides theoretical foundation for understanding why people fail to give as much as they intend, even when they endorse giving norms. Relevant for both income-based and asset-based norms, but potentially more important for asset-based norms since giving from assets requires active conversion decisions that can be easily postponed. Suggests that effective implementation of either type of norm requires addressing time inconsistency, potentially through automatic mechanisms or commitment devices.

  POSITION: Behavioral economics perspective showing gap between endorsed norms and actual behavior. Implies that philosophical arguments for giving norms are insufficient without mechanisms addressing psychological barriers like present bias.
  },
  keywords = {time-inconsistency, behavioral-economics, commitment, High}
}

@article{adena2023charitable,
