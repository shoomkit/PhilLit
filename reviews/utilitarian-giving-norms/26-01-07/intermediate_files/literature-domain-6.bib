  year = {2024},
  volume = {40},
  number = {3},
  pages = {497--513},
  doi = {10.1093/esr/jcae009},
  note = {
  CORE ARGUMENT: Examines how income inequality at regional level affects individual charitable giving in China. Finds no significant relationship between inequality and giving to high-redistributive causes (poverty alleviation), contrary to predictions. Higher education moderates this relationship slightly positively. Small negative association with giving to low-redistributive causes (arts, culture). Suggests contextual inequality does not automatically increase compensatory charitable behavior.

  RELEVANCE: Addresses whether inequality context affects giving behavior—relevant for understanding whether utilitarian giving norms gain traction in unequal societies. The null finding for redistributive giving suggests that moral arguments about addressing inequality may not automatically translate into behavior. Implications for implementing income vs. asset-based norms: since wealth inequality is higher than income inequality, asset-based norms might face greater psychological resistance in contexts where inequality is salient and wealth concentration is visible.

  POSITION: Cross-sectional evidence on inequality and giving. Challenges assumption that inequality awareness automatically drives compensatory giving. Suggests norm implementation cannot rely on inequality salience alone.
  },
  keywords = {inequality, cross-national, redistributive-giving, Medium}
}

@article{kirwan2025aging,
