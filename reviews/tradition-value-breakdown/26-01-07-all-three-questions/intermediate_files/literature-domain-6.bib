@article{gadamer2006looking,
  author = {Gadamer, Hans-Georg and Grondin, Jean},
  title = {Looking Back with Gadamer Over his Writings and their Effective History},
  journal = {Theory, Culture \& Society},
  year = {2006},
  volume = {23},
  pages = {85--100},
  doi = {10.1177/0263276406063230},
  note = {
  CORE ARGUMENT: Gadamer reflects retrospectively on the development and
  reception of his hermeneutic philosophy, particularly the concept of
  effective history (Wirkungsgeschichte) and its impact on understanding how
  interpretation is always shaped by the historical effects of what we
  interpret. He explains how his work sought to reveal the inescapability of
  historical consciousness and the productive role of prejudice in
  understanding, countering Enlightenment notions that prejudices only
  obstruct truth.

  RELEVANCE: This paper provides Gadamer's own retrospective account of his
  central concepts, making it essential for understanding effective history
  as the mechanism by which tradition shapes understanding. It directly
  addresses how tradition functions as an ongoing dialogue between past and
  present, which is crucial for explaining both tradition's value and how it
  can evolve or become distorted. The concept of effective history is key to
  understanding how traditions transmit meaning while remaining open to
  reinterpretation.

  POSITION: Gadamerian hermeneutics - affirms tradition as dialogical and
  historically situated rather than static or purely conservative.
  },
  keywords = {Gadamer, effective-history, wirkungsgeschichte, hermeneutics, High}
}

@article{gander2004between,
  author = {Gander, Hans-Helmuth},
  title = {Between Strangeness and Familiarity: Towards Gadamer's Conception of Effective History},
  journal = {Research in Phenomenology},
  year = {2004},
  volume = {34},
  pages = {121--136},
  doi = {10.1163/1569164042404626},
  note = {
  CORE ARGUMENT: Gander analyzes Gadamer's concept of effective history by
  showing how it mediates between the strangeness of historical distance and
  the familiarity of our own historicity. Understanding requires recognizing
  both the otherness of tradition and our participation in it. The tension
  between distance and belonging is productive rather than a barrier,
  enabling the fusion of horizons that characterizes genuine understanding.

  RELEVANCE: This explication of effective history's dual structure
  (strangeness and familiarity) illuminates how tradition functions
  epistemically—it provides the background understanding that makes
  interpretation possible while also presenting something foreign that
  challenges our assumptions. This tension is crucial for understanding how
  traditions can transmit knowledge while also evolving, and how they might
  break down when either pole (familiarity or strangeness) dominates
  pathologically.

  POSITION: Gadamerian interpretation focusing on the dialectical structure
  of effective history.
  },
  keywords = {Gadamer, effective-history, hermeneutic-circle, tradition, High}
}

