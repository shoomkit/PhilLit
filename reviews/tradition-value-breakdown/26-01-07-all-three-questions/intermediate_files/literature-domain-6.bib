@article{levy2019knowledge,
  author = {Levy, Neil and Alfano, Mark},
  title = {Knowledge From Vice: Deeply Social Epistemology},
  journal = {Mind},
  year = {2019},
  volume = {128},
  pages = {887--915},
  doi = {10.1093/mind/fzz017},
  note = {
  CORE ARGUMENT: Levy and Alfano argue that social epistemology hasn't been
  social enough—it remains too focused on individual epistemic agency and
  virtue. In many real-world contexts of knowledge production and
  transmission, what appear as individual epistemic vices (closed-mindedness,
  dogmatism) can function as epistemic virtues at the group level by enabling
  division of cognitive labor and stable knowledge preservation. Epistemology
  must account for deeply social and distributed cognitive processes.

  RELEVANCE: This radical rethinking of epistemic virtue and vice is
  important for understanding tradition. What looks like epistemic vice
  (dogmatic adherence to tradition, resistance to innovation) might sometimes
  serve the function of knowledge preservation and transmission. Conversely,
  individual epistemic virtue might undermine collective epistemic goals. This
  helps explain why traditions can be epistemically valuable despite apparent
  rigidity, and why their breakdown isn't always due to individual epistemic
  failure.

  POSITION: Deeply social epistemology challenging individual-focused virtue
  epistemology.
  },
  keywords = {social-epistemology, virtue, collective-knowledge, tradition, Medium}
}

