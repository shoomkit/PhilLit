}

@article{greco2020transmission,
  author = {Greco, John},
  title = {The Transmission of Knowledge},
  publisher = {Cambridge University Press},
  year = {2020},
  doi = {10.1017/9781108560818},
  note = {
  CORE ARGUMENT: Greco develops a social epistemology of knowledge
  transmission distinct from knowledge generation, arguing that transmission
  depends on interpersonal trust and cooperative social structures rather
  than individual evidence-gathering. Drawing on virtue epistemology and
  action theory, he models transmission as a form of shared agency (like
  giving a gift or passing a ball) requiring both giver and receiver to play
  their epistemic roles properly. Social context determines whether
  transmission succeeds or fails.

  RELEVANCE: Greco's framework provides social-epistemological tools for
  understanding tradition as a form of knowledge transmission across
  generations. His emphasis on trust, cooperation, and social structures
  helps explain both how traditions successfully transmit knowledge and how
  they can break down when trust erodes or cooperation fails. The distinction
  between transmission and generation is crucial for understanding tradition's
  unique epistemic role and vulnerabilities.

  POSITION: Social epistemology of testimony and knowledge transmission using
  virtue-theoretic framework.
  },
  keywords = {transmission, testimony, social-epistemology, trust, High}
}

