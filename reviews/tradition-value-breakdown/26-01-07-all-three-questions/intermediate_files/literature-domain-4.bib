@article{wall2016political,
  author = {Wall, Steven},
  title = {Political Morality and the Authority of Tradition},
  journal = {Journal of Political Philosophy},
  year = {2016},
  volume = {24},
  number = {2},
  pages = {137--161},
  doi = {10.1111/jopp.12058},
  note = {
  CORE ARGUMENT: Examines whether and when traditions possess authority in
  political morality. Wall argues that traditions can have genuine but
  defeasible authority when they embody collective practical wisdom developed
  over time. However, this authority is not absolute—it must be balanced
  against independent moral considerations and critical reflection. He
  distinguishes tradition's epistemic authority (traditions track truth about
  political goods) from its practical authority (traditions coordinate action
  and sustain valuable practices).

  RELEVANCE: Directly relevant to the project's focus on tradition's normative
  value and the conditions under which traditions succeed or fail. Wall
  provides a framework for analyzing when deference to tradition is justified
  versus when critical reform is required. His distinction between epistemic
  and practical authority illuminates different ways traditions can break down.

  POSITION: Critical traditionalism that recognizes tradition's authority while
  subjecting it to independent moral scrutiny.
  },
  keywords = {tradition-authority, political-morality, legitimacy, High}
}

