@article{alexander2015tradition,
  author = {Alexander, James},
  title = {Three Rival Views of Tradition (Arendt, Oakeshott and MacIntyre)},
  journal = {Journal of the Philosophy of History},
  year = {2015},
  volume = {9},
  number = {1},
  pages = {21--49},
  doi = {10.1163/18722636-12341287},
  note = {
  CORE ARGUMENT: Arendt, Oakeshott, and MacIntyre offer fundamentally different
  views of tradition despite all being "traditionalist" thinkers. Arendt sees
  tradition as transmission of foundational political experience (Roman
  authority, Greek philosophy, Hebrew religion) that modernity has broken.
  Oakeshott sees tradition as unreflective practical knowledge embedded in
  customs and practices. MacIntyre sees tradition as rational argument extended
  across generations about how to achieve goods. These views imply different
  accounts of tradition-breakdown: for Arendt, violent rupture; for Oakeshott,
  rationalist interference; for MacIntyre, epistemic crisis within tradition.

  RELEVANCE: This comparative analysis illuminates how "tradition" is contested
  even among philosophers who valorize it. For the project, Alexander's
  distinction matters because different views of what traditions ARE imply
  different theories of how they fail. The article shows that conceptual
  analysis of tradition cannot be neutral—it already involves taking sides
  on substantive questions about rationality, modernity, and political order.
  Important for recognizing that domain 1 (conceptual analysis) cannot be
  fully separated from domain 2 (normative value).

  POSITION: Comparative analysis revealing deep differences among major
  traditionalist thinkers; shows tradition concept is essentially contested.
  },
  keywords = {comparative-analysis, MacIntyre, Oakeshott, Low}
}

