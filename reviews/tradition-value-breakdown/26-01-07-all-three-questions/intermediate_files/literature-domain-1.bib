@book{lewis1969convention,
  author = {Lewis, David K.},
  title = {Convention: A Philosophical Study},
  year = {1969},
  publisher = {Harvard University Press},
  address = {Cambridge, MA},
  note = {
  CORE ARGUMENT: Conventions are solutions to recurring coordination problems,
  sustained by common knowledge that everyone expects everyone else to conform.
  A convention is a regularity R in behavior such that: everyone conforms to R,
  everyone expects everyone else to conform to R, everyone prefers to conform to
  R on condition that others do, and there exists at least one alternative
  regularity that could serve the same function. This game-theoretic analysis
  provides necessary and sufficient conditions for conventional phenomena.

  RELEVANCE: Lewis provides the dominant analytical framework for understanding
  conventional phenomena. If traditions are a species of convention, they inherit
  this structure—implying traditions rest on coordination and mutual
  expectations rather than inherent authority or value. However, Lewis's account
  may be insufficient for traditions: conventions can arise quickly and
  dissolve easily, while traditions seem to require temporal extension and
  transmission. The project must examine whether traditions are conventions,
  sub-conventions, or distinct phenomena requiring different conceptual apparatus.

  POSITION: Foundational convention theory using game-theoretic analysis;
  establishes baseline for analyzing tradition as potential convention type.
  },
  keywords = {convention-theory, coordination-equilibria, Lewis, High}
}

@article{beckstein2017living,
  author = {Beckstein, Martin},
  title = {The concept of a living tradition},
  journal = {European Journal of Social Theory},
  year = {2017},
  volume = {20},
  number = {4},
  pages = {491--510},
  doi = {10.1177/1368431016668185},
  note = {
  CORE ARGUMENT: Traditions are temporally extended practices characterized by
  (1) a pattern of transmission across generations, (2) continuity despite
  change, and (3) criteria for authentic continuation that practitioners
  recognize and contest. Beckstein argues that conventions (Lewis) and habits
  lack the necessary temporal extension and transmission structure. Traditions
  must allow for development while maintaining identity—hence "living"
  traditions. The concept requires distinguishing tradition-constitutive
  features from accidental historical accretions, but this distinction is
  itself contestable within the tradition.

  RELEVANCE: This is the most systematic recent philosophical treatment of
  tradition as a concept. Beckstein directly addresses the project's central
  question: what makes something a tradition versus a custom or convention?
  His "living tradition" framework provides conceptual tools for analyzing
  tradition degeneration: a tradition fails when it loses authentic
  continuation (becomes ossified) or transmission breaks down. The emphasis
  on contestation within tradition is crucial for understanding how traditions
  evolve without losing identity. Essential for domain 1's conceptual analysis.

  POSITION: Most important recent systematic conceptual analysis of tradition;
  argues for practice-based account with temporal extension as essential.
  },
  keywords = {tradition-concept, living-tradition, temporal-extension, High}
}

@book{shils1981tradition,
  author = {Shils, Edward},
  title = {Tradition},
  year = {1981},
  publisher = {University of Chicago Press},
  address = {Chicago},
  note = {
  CORE ARGUMENT: Traditions are patterns of belief, practice, or institution
  that are handed down from the past and possess authority by virtue of their
  having been handed down. Shils provides a typology: substantive traditions
  (beliefs, practices) versus formal traditions (patterns of relationship),
  and varying orientations toward tradition (traditionalistic,
  traditionalist, antitraditional). Traditions function to connect present
  to past, providing continuity and identity. All societies contain multiple,
  often competing traditions; even "revolutionary" movements establish their
  own traditions.

  RELEVANCE: Though sociological rather than strictly philosophical, Shils
  remains the most comprehensive single-volume treatment of tradition. His
  typology illuminates how traditions operate across different domains (law,
  religion, science, politics). For the project, Shils's account of how
  traditions gain and lose authority is crucial—authority derives partly from
  pastness itself, but also from perceived continuity with valued origins.
  His analysis of "traditionalism" (rigid attachment to tradition) versus
  healthy tradition-maintenance informs questions of when traditions calcify
  versus adapt. Foundational text despite being 40+ years old.

  POSITION: Sociological approach emphasizing tradition's role in social
  integration and authority; provides influential typology still referenced.
  },
  keywords = {Shils, tradition-typology, authority, Medium}
}

@article{jacobs2007edward,
  author = {Jacobs, Struan},
  title = {Edward Shils' Theory of Tradition},
